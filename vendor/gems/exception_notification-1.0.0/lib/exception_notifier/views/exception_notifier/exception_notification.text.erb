<%# encoding: utf-8 %>
A <%= @exception.class %> occurred in <%= @kontroller.controller_name %>#<%= @kontroller.action_name %>:

  <%= raw @exception.message %>
  <%= raw @backtrace.first %>

<%  sections = @sections.map do |section|
      summary = render(section).strip
      unless summary.blank?
        title = render("title", :title => section).strip
	x = "#{title}\n\n#{summary.gsub(/^/, "  ")}\n\n"
	x.force_encoding("UTF-8") if x.respond_to? :force_encoding
        x
      end
    end 
    sections = sections.join
    sections.force_encoding("ASCII-8BIT") if sections.respond_to? :force_encoding
%>
<%begin%>
  <%= sections %>
<%rescue%>
<strong>Cant print properly the message</strong>
<%= sections.ascii%>
<%end%>