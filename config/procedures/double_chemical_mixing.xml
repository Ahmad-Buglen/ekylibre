<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="double_chemical_mixing" natures="plant_chemical_mixing" version="0">
    <variables>
      <variable name="first_chemical_input" variety="preparation" abilities="care(plant)"/>
      <variable name="first_chemical_input_to_use" variety=":first_chemical_input" derivative-of=":first_chemical_input" new="parted-from: first_chemical_input" roles="plant_chemical_mixing-input" default-name="{{variant}} ({{container}})">
        <handler indicator="population"/>
        <handler indicator="net_mass" unit="kilogram" if="first_chemical_input.net_mass(kilogram) &gt; 0" to="population" backward="value * self..net_mass(kilogram)" forward="value / self..net_mass(kilogram)"/>
        <handler indicator="net_volume" unit="liter" if="first_chemical_input.net_volume(liter) &gt; 0" to="population" backward="value * self..net_volume(liter)" forward="value / self..net_volume(liter)"/>
      </variable>
      <variable name="second_chemical_input" variety="preparation" abilities="care(plant)"/>
      <variable name="second_chemical_input_to_use" variety=":second_chemical_input" derivative-of=":second_chemical_input" new="parted-from: second_chemical_input" roles="plant_chemical_mixing-input" default-name="{{variant}} ({{container}})">
        <handler indicator="population"/>
        <handler indicator="net_mass" unit="kilogram" if="second_chemical_input.net_mass(kilogram) &gt; 0" to="population" backward="value * self..net_mass(kilogram)" forward="value / self..net_mass(kilogram)"/>
        <handler indicator="net_volume" unit="liter" if="second_chemical_input.net_volume(liter) &gt; 0" to="population" backward="value * self..net_volume(liter)" forward="value / self..net_volume(liter)"/>
      </variable>
      <variable name="worker" variety="worker" roles="plant_chemical_mixing-doer"/>
      <variable name="chemical_mix" variety="preparation" new="produced-by: first_chemical_input" roles="plant_chemical_mixing-output" default-name="{{variant}} [{{birth_day}}/{{birth_month}}/{{birth_year}}] ({{container}})">
        <handler indicator="population"/>
      </variable>
      <variable name="chemical_storage" abilities="store(preparation)"/>
    </variables>
    <operations>
      <operation id="1">
        <task do="[first_chemical_input] parts with [first_chemical_input_to_use]"/>
        <task do="[second_chemical_input] parts with [second_chemical_input_to_use]"/>
        <task do="[first_chemical_input_to_use] and [second_chemical_input_to_use] are mixed into [chemical_mix]"/>
        <task do="[chemical_mix] moves in [chemical_storage]"/>
      </operation>
    </operations>
  </procedure>
</procedures>
