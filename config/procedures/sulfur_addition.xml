<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="sulfur_addition" categories="viticulture_transformation" actions="sulfur_addition">
    <parameters>
      <parameter name="tank" type="tool" filter="is equipment and can store(wine)" default-actor="storage"/>
      <parameter name="wine_to_treat" type="target" filter="is wine and derives from grape" default-actor="first_localized_in: tank"/>
      <parameter name="oenological_intrant" type="input" filter="is matter and can sulfurize(wine)">
        <handler indicator="mass_volume_density" unit="gram_per_hectoliter" if="tank? and wine_to_treat?" to="population" backward="(VALUE * SELF..net_mass(gram)) / sum(wine_to_treat, :net_volume, :hectoliter)" forward="(VALUE * sum(wine_to_treat, :net_volume, :hectoliter)) / SELF..net_mass(gram)"/>
        <handler indicator="volume_density" unit="centiliter_per_hectoliter" if="tank? and wine_to_treat? and SELF.net_volume? and SELF.net_volume(liter) > 0" to="population" backward="(VALUE * SELF..net_volume(centiliter)) / sum(wine_to_treat, :net_volume, :hectoliter)" forward="(VALUE * sum(wine_to_treat, :net_volume, :hectoliter)) / SELF..net_volume(centiliter)"/>
        <handler name="sulfur_dioxide_density" indicator="mass_volume_density" unit="gram_per_hectoliter" if="SELF.sulfur_dioxide_concentration? and SELF.sulfur_dioxide_concentration(percent) > 0 and wine_to_treat?" to="population" backward="(VALUE * SELF..net_mass(gram) * (SELF.sulfur_dioxide_concentration(percent) / 100)) / sum(wine_to_treat, :net_volume, :hectoliter)" forward="(VALUE * sum(wine_to_treat, :net_volume, :hectoliter)) / (SELF..net_mass(gram) * SELF.sulfur_dioxide_concentration(percent) / 100)"/>
      </parameter>
      <parameter name="wine_man" type="doer" filter="is worker and can move"/>
    </parameters>
  </procedure>
</procedures>
