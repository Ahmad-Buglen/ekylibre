<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="silage_transport" natures="straw_transport" version="0">
    <variables>
      <variable name="zone" variety="cultivable_zone" default-actor="storage"/>
      <variable name="silage" variety="silage" default-actor="first_localized_in: zone"/>
      <variable name="silage_to_deliver" variety=":silage" derivative-of=":silage" new="parted-from: silage" roles="straw_transport-target" default-name="{{variant}} {{birth_year}} ({{container}})" default-population=":silage">
        <handler indicator="population"/>
        <handler indicator="net_mass" unit="ton" to="population" backward="(value * self..net_mass(ton))" forward="(value / self..net_mass(ton))"/>
      </variable>
      <variable name="trailer" variety="trailer" abilities="store(silage)" roles="straw_transport-tool"/>
      <variable name="driver" abilities="drive(tractor)" roles="straw_transport-doer"/>
      <variable name="tractor" variety="equipment" abilities="tow(equipment), catch(equipment)" roles="straw_transport-tool"/>
      <variable name="silo" abilities="store(silage)" roles="straw_transport-container"/>
    </variables>
    <operations>
      <operation id="1">
        <task do="[silage] parts with [silage_to_deliver]"/>
        <task do="[silage_to_deliver] moves in [trailer]"/>
        <task do="[tractor] moves at [silo]"/>
        <task do="[silage_to_deliver] moves in [silo]"/>
      </operation>
    </operations>
  </procedure>
</procedures>
