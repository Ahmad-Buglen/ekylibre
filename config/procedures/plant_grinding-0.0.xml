<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="plant_grinding" natures="grinding, soil_enrichment" version="1" status="frozen">
    <variables>
      <variable name="grindable" derivative-of="plant" role="grinding-input"/>
      <variable name="grinder" abilities="grind(plant)"/>
      <variable name="grinded" derivative-of="plant" role="grinding-output, soil_enrichment-input"/>
      <variable name="land_parcel" variety="land_parcel" role="soil_enrichment-target"/>
      <variable name="driver" variety="worker"/>
    </variables>
    <operation>
      <task do="[driver] drives [grinder]"/>
      <task do="[grinder] consumes [grindable]"/>
      <task do="[grinder] produces [grinded]"/>
      <task do="[land_parcel] consumes [grinded]"/>
    </operation>
  </procedure>
</procedures>
