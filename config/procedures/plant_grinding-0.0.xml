<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="plant_grinding" natures="grinding, soil_enrichment" version="0.0" status="frozen">
    <variables>
      <variable name="plant" derivative-of="plant" role="grinding-input"/>
      <variable name="tractor" abilities="tow"/>
      <variable name="grinder" abilities="grind(plant)"/>
      <variable name="grinded" derivative-of="plant" role="grinding-output, soil_enrichment-input" new="true"/>
      <variable name="land_parcel" variety="land_parcel" role="soil_enrichment-target"/>
      <variable name="driver" variety="worker"/>
    </variables>
    <operations>
      <operation id="100">
        <!-- <task do="[driver] drives [grinder]"/> -->
        <task do="[grinder] consumes [plant]"/>
        <task do="[grinder] produces [grinded]"/>
        <task do="[land_parcel] consumes [grinded]"/>
      </operation>
    </operations>
  </procedure>
</procedures>
