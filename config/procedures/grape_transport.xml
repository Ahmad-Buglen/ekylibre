<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="grape_transport" natures="grape_transport" version="0">
    <variables>
      <variable name="zone" variety="cultivable_zone" default-actor="storage"/>
      <variable name="grape" variety="grape" default-actor="first_localized_in: zone"/>
      <variable name="grape_to_deliver" variety=":grape" derivative-of=":grape" new="parted-from: grape" roles="grape_transport-target" default-name="{{variant}} {{birth_year}} ({{container}})" default-population=":grape">
        <handler indicator="population"/>
        <handler indicator="net_mass" unit="kilogram" to="population" backward="(value * self..net_mass(kilogram))" forward="(value / self..net_mass(kilogram))"/>
        <handler name="net_mass_in_ton" indicator="net_mass" unit="ton" to="population" backward="(value * self..net_mass(ton))" forward="(value / self..net_mass(ton))"/>
      </variable>
      <variable name="trailer" variety="trailer" abilities="store(grape)" roles="grape_transport-tool"/>
      <variable name="driver" abilities="drive(tractor)" roles="grape_transport-doer"/>
      <variable name="tractor" variety="equipment" abilities="tow(equipment), catch(equipment)" roles="grape_transport-tool"/>
      <variable name="silo" abilities="store(grape)" roles="grape_transport-container"/>
    </variables>
    <operations>
      <operation id="1">
        <task do="[grape] parts with [grape_to_deliver]"/>
        <task do="[grape_to_deliver] moves in [trailer]"/>
        <task do="[tractor] moves at [silo]"/>
        <task do="[grape_to_deliver] moves in [silo]"/>
        <task do="grape_to_deliver|sucrose_concentration is measured"/>
      </operation>
    </operations>
  </procedure>
</procedures>
