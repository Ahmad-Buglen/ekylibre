<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="atomic_chemical_weed" natures="plant_chemical_weed" version="0" status="frozen">
    <variables>
      <variable name="weedkilling"     variety="preparation" abilities="kill(plant)" roles="plant_chemical_weed-input_origin"/>
      <variable name="weedkilling_to_spray" new="parted-from: weedkilling" roles="plant_chemical_weed-input" default-population=":weedkilling" default-name="{{variant}} - [{{birth_day}}/{{birth_month}}/{{birth_year}}]">
      <handler indicator="population" />
      <handler indicator="mass_area_density"   unit="kilogram_per_hectare"   to="population" if="weedkilling_to_spray? &amp; weedkilling_to_spray..net_mass(kilogram) > 0"
                 forward="(value * land_parcel.net_surface_area(hectare)) / self..net_mass(kilogram)"
                 backward="(value * self..net_mass(kilogram)) / land_parcel.net_surface_area(hectare)"
                 /> <!-- kg / ha -->
      <handler indicator="volume_area_density"   unit="liter_per_hectare"   to="population"
        if="weedkilling_to_spray? &amp; weedkilling_to_spray..net_volume(liter) > 0"
                 forward="(value * land_parcel.net_surface_area(hectare)) / self..net_volume(liter)"
                 backward="(value * self..net_volume(liter)) / land_parcel.net_surface_area(hectare)"
                 /> <!-- l / ha -->
      </variable>
      <variable name="tractor" variety="equipment" abilities="catch(sprayer)" roles="plant_chemical_weed-tool"/>
      <variable name="sprayer" abilities="spray" roles="plant_chemical_weed-tool"/>
      <variable name="driver"  abilities="drive(tractor)" roles="plant_chemical_weed-doer"/>


      <variable name="land_parcel"  abilities="store(plant)" roles="plant_chemical_weed-target" need="shape" default-actor="storage" default-shape=":land_parcel">
        <handler indicator="shape">
          <converter to="shape"      forward="intersection(value, land_parcel.shape)" backward="value"/>
          <converter to="population" forward="area(value) / land_parcel..net_surface_area(square_meter)"/>
        </handler>
      </variable>
    </variables>
    <operations>
      <operation id="700" duration="18 minutes">
        <task do="[tractor] moves in [land_parcel]"/>
      </operation>
      <operation id="800">
        <task do="[weedkilling] parts with [weedkilling_to_spray]"/>
        <task do="[weedkilling_to_spray] moves in [land_parcel]"/>
        <task do="land_parcel|soil_cultural_state is measured"/>
        <task do="[land_parcel] consumes [weedkilling_to_spray]"/>
      </operation>
    </operations>
  </procedure>
</procedures>
