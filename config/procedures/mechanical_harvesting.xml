<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="mechanical_harvesting" categories="harvesting" actions="harvest">
    <parameters>
      <parameter name="cropper_driver" type="doer" filter="can drive(reaper)"/>
      <parameter name="cropper" type="tool" filter="is reaper and can harvest(plant)"/>
      <parameter name="cultivation" type="target" filter="is plant and can produce(grain) and can produce(straw)" default-shape=":cultivation" default-actor="variant_localized_in_storage">
        <handler indicator="shape">
          <converter to="shape" forward="intersection(VALUE, SELF.shape)" backward="VALUE"/>
          <converter to="population" forward="area(VALUE) / SELF..net_surface_area(square_meter)"/>
        </handler>
      </parameter>
      <parameter name="grains" type="output" variety="grain" derivative-of="variety: cultivation" filter="is grain and derives from plant" default-name="{{variant}} [{{birth_day}}/{{birth_month}}/{{birth_year}}] ({{container}})">
        <handler indicator="net_mass" unit="quintal" to="population" backward="VALUE * SELF..net_mass(quintal)" forward="VALUE / SELF..net_mass(quintal)"/>
        <handler name="net_mass_in_ton" indicator="net_mass" unit="ton" to="population" backward="VALUE * SELF..net_mass(ton)" forward="VALUE / SELF..net_mass(ton)"/>
        <handler indicator="mass_area_density" unit="quintal_per_hectare" if="sum(cultivation, :net_surface_area, :hectare) >= 0.1" to="population" backward="(VALUE * SELF..net_mass(quintal)) / sum(cultivation, :net_surface_area, :hectare)" forward="(VALUE * sum(cultivation, :net_surface_area, :hectare)) / SELF..net_mass(quintal)"/>
      </parameter>
      <parameter name="straws" type="output" variety="straw" derivative-of="variety: cultivation" filter="is straw and derives from plant" default-name="{{variant}} [{{birth_day}}/{{birth_month}}/{{birth_year}}] ({{container}})">
        <handler indicator="net_mass" unit="ton" to="population" backward="VALUE * SELF..net_mass(ton)" forward="VALUE / SELF..net_mass(ton)"/>
        <handler indicator="mass_area_density" unit="ton_per_hectare" if="sum(cultivation, :net_surface_area, :hectare) >= 0.1" to="population" backward="(VALUE * SELF..net_mass(ton)) / sum(cultivation, :net_surface_area, :hectare)" forward="(VALUE * sum(cultivation, :net_surface_area, :hectare)) / SELF..net_mass(ton)"/>
      </parameter>
    </parameters>
  </procedure>
</procedures>
