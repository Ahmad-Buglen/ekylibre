<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="partial_wine_transfer" natures="transfer" version="0">
    <variables>
      <variable name="tank" variety="equipment" abilities="store(wine), store_liquid" default-actor="storage"/>
      <variable name="wine" variety="wine" default-actor="first_localized_in: tank"/>
      <variable name="wine_to_move" variety=":wine" derivative-of=":wine" new="parted-from: wine" roles="transfer-target" default-name="{{variant}} {{birth_year}} ({{container}})" default-population=":wine">
        <handler indicator="population"/>
      </variable>
      <variable name="destination_tank" variety="equipment" abilities="store(wine), store_liquid" roles="transfer-container"/>
      <variable name="wine_man" variety="worker" abilities="move" roles="transfer-doer"/>
    </variables>
    <operations>
      <operation id="1">
        <!-- Operation 100 (4 minutes) -->
        <task do="[wine_man] moves at [wine]"/>
        <!-- Operation 200 (4 minutes) -->
        <task do="[wine] parts with [wine_to_move]"/>
        <!-- Operation 300 (7 minutes) -->
        <task do="[wine_to_move] moves in [destination_tank]"/>
        <!-- Operation 400 (4 minutes) -->
        <task do="[wine_man] moves in default storage"/>
      </operation>
    </operations>
  </procedure>
</procedures>
