<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="hazelnuts_transport" natures="nuts_transport" version="0">
    <variables>
      <variable name="zone" variety="cultivable_zone" default-actor="storage"/>
      <variable name="nuts" variety="hazelnut" default-actor="first_localized_in: zone"/>
      <variable name="nuts_to_deliver" variety=":nuts" derivative-of=":nuts" new="parted-from: nuts" roles="nuts_transport-target" default-name="{{variant}} {{birth_year}} ({{container}})" default-population=":nuts">
        <handler indicator="population"/>
        <handler indicator="net_mass" unit="ton" to="population" backward="(value * self..net_mass(ton))" forward="(value / self..net_mass(ton))"/>
      </variable>
      <variable name="trailer" variety="trailer" abilities="store(hazelnut)" roles="nuts_transport-tool"/>
      <variable name="driver" abilities="drive(tractor)" roles="nuts_transport-doer"/>
      <variable name="tractor" variety="equipment" abilities="tow(equipment), catch(equipment)" roles="nuts_transport-tool"/>
      <variable name="silo" abilities="store(hazelnut)" roles="nuts_transport-container"/>
    </variables>
    <operations>
      <operation id="1">
        <task do="[nuts] parts with [nuts_to_deliver]"/>
        <task do="[nuts_to_deliver] moves in [trailer]"/>
        <task do="[tractor] moves at [silo]"/>
        <task do="[nuts_to_deliver] moves in [silo]"/>
        <task do="nuts_to_deliver|water_content_rate is measured"/>
        <task do="nuts_to_deliver|impurity_concentration is measured"/>
      </operation>
    </operations>
  </procedure>
</procedures>
