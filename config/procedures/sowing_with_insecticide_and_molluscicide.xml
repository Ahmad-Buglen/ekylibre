<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="sowing_with_insecticide_and_molluscicide" natures="sowing, plant_illness_treatment" version="0">
    <variables>
      <variable name="seeds" variety="seed" derivative-of="plant" abilities="grow" roles="sowing-input_origin"/>
      <variable name="seeds_to_sow" variety=":seeds" derivative-of=":seeds" new="parted-from: seeds" roles="sowing-input" default-population=":seeds">
        <handler indicator="population"/>
        <handler indicator="net_mass" unit="kilogram" to="population" backward="value * self..net_mass(kilogram)" forward="value / self..net_mass(kilogram)"/>
        <handler indicator="mass_area_density" unit="kilogram_per_hectare" to="population" backward="(value * self..net_mass(kilogram)) / cultivation.net_surface_area(hectare)" forward="(value * cultivation.net_surface_area(hectare)) / self..net_mass(kilogram)"/>
        <handler indicator="grains_area_density" unit="unity_per_square_meter" to="population" backward="(((value * self..net_mass(gram)) / cultivation.net_surface_area(square_meter)) * 1000) / self.thousand_grains_mass(gram)" forward="(((value * self.thousand_grains_mass(gram)) / 1000) * cultivation.net_surface_area(square_meter)) / self..net_mass(gram)"/>
        <handler name="grains_area_density_in_thousand_per_hectare" indicator="grains_area_density" unit="thousand_per_hectare" to="population" backward="(value * self..net_mass(gram)) / (cultivation.net_surface_area(hectare) * self.thousand_grains_mass(gram))" forward="(value * self.thousand_grains_mass(gram) * cultivation.net_surface_area(hectare)) / self..net_mass(gram)"/>
        <handler indicator="grains_count" unit="thousand" to="population" backward="(value * self..net_mass(gram)) / self.thousand_grains_mass(gram)" forward="(value * self.thousand_grains_mass(gram)) / self..net_mass(gram)"/>
      </variable>
      <variable name="insecticide" variety="preparation" abilities="kill(insecta)" roles="plant_illness_treatment-input_origin"/>
      <variable name="insecticide_to_input" variety=":insecticide" derivative-of=":insecticide" new="parted-from: insecticide" roles="plant_illness_treatment-input" default-population=":insecticide">
        <handler indicator="population"/>
        <handler indicator="net_mass" unit="kilogram" to="population" backward="value * self..net_mass(kilogram)" forward="value / self..net_mass(kilogram)"/>
        <handler indicator="mass_area_density" unit="kilogram_per_hectare" to="population" backward="(value * self..net_mass(kilogram)) / cultivation.net_surface_area(hectare)" forward="(value * cultivation.net_surface_area(hectare)) / self..net_mass(kilogram)"/>
      </variable>
      <variable name="molluscicide" variety="preparation" abilities="kill(gastropoda)" roles="plant_illness_treatment-input_origin"/>
      <variable name="molluscicide_to_input" variety=":molluscicide" derivative-of=":molluscicide" new="parted-from: molluscicide" roles="plant_illness_treatment-input" default-population=":molluscicide">
        <handler indicator="population"/>
        <handler indicator="net_mass" unit="kilogram" to="population" backward="value * self..net_mass(kilogram)" forward="value / self..net_mass(kilogram)"/>
        <handler indicator="mass_area_density" unit="kilogram_per_hectare" to="population" backward="(value * self..net_mass(kilogram)) / cultivation.net_surface_area(hectare)" forward="(value * cultivation.net_surface_area(hectare)) / self..net_mass(kilogram)"/>
      </variable>
      <variable name="sower" abilities="spread(preparation), sow, spray" roles="sowing-tool, plant_illness_treatment-tool"/>
      <variable name="driver" abilities="drive(equipment), move" roles="sowing-doer, plant_illness_treatment-doer"/>
      <variable name="tractor" abilities="tow(equipment), move" roles="sowing-tool"/>
      <variable name="land_parcel" abilities="store(plant)" roles="sowing-target" default-actor="storage"/>
      <variable name="cultivation" variety="derivative-of: seeds" new="produced-by: land_parcel" roles="sowing-output, plant_illness_treatment-target" default-name="{{variant}} [{{birth_month_abbr}}. {{birth_year}}] ({{container}})" default-shape=":land_parcel" default-variant="production">
        <handler indicator="shape">
          <converter to="shape" forward="intersection(value, land_parcel.shape)" backward="value"/>
          <converter to="population" forward="area(value) / cultivation..net_surface_area(square_meter)"/>
        </handler>
      </variable>
    </variables>
    <operations>
      <operation id="1">
        <!-- Operation 500 -->
        <task do="[seeds] parts with [seeds_to_sow]"/>
        <task do="[seeds_to_sow] moves in [land_parcel]"/>
        <task do="[insecticide] parts with [insecticide_to_input]"/>
        <task do="[insecticide_to_input] moves in [land_parcel]"/>
        <task do="[molluscicide] parts with [molluscicide_to_input]"/>
        <task do="[molluscicide_to_input] moves in [land_parcel]"/>
        <task do="[land_parcel] consumes [seeds_to_sow]"/>
        <task do="[land_parcel] consumes [insecticide_to_input]"/>
        <task do="[land_parcel] consumes [molluscicide_to_input]"/>
        <task do="[land_parcel] produces [cultivation]"/>
        <task do="cultivation is in land_parcel"/>
        <!-- Operation 600 -->
        <task do="cultivation|population|superficial_count:cultivation is measured"/>
        <task do="land_parcel|soil_cultural_state|covered is measured"/>
        <task do="cultivation|plants_count is measured"/>
      </operation>
    </operations>
  </procedure>
</procedures>
