<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="plant_watering" categories="irrigating" actions="irrigation">
    <parameters>
      <parameter name="water" type="input" filter="is water">
        <handler indicator="mass_area_density" unit="kilogram_per_square_meter" to="population" backward="(VALUE * PRODUCT..net_mass(ton)) / sum(cultivation, :net_surface_area, :hectare)" forward="(VALUE * sum(cultivation, :net_surface_area, :hectare)) / PRODUCT..net_mass(ton)"/>
        <handler name="nitrogen_unities_density" indicator="mass_area_density" unit="kilogram_per_hectare" if="PRODUCT.nitrogen_concentration? and PRODUCT.nitrogen_concentration(milligram_per_kilogram) > 0" to="population" backward="(VALUE * PRODUCT..net_mass(kilogram) * (PRODUCT.nitrogen_concentration(milligram_per_kilogram) / 1000000)) / sum(cultivation, :net_surface_area, :hectare)" forward="(VALUE * sum(cultivation, :net_surface_area, :hectare)) / (PRODUCT..net_mass(kilogram) * PRODUCT.nitrogen_concentration(milligram_per_kilogram) / 1000000)"/>
      </parameter>
      <parameter name="spreader" type="tool" filter="can spread(water)"/>
      <parameter name="land_parcel" type="target" filter="is cultivable_zone" default-actor="storage"/>
      <parameter name="cultivation" type="target" filter="is plant" default-shape=":cultivation" default-actor="variant_localized_in_storage">
        <handler indicator="shape">
          <converter to="shape" forward="intersection(VALUE, cultivation.shape)" backward="VALUE"/>
          <converter to="population" forward="area(VALUE) / cultivation..net_surface_area(square_meter)"/>
        </handler>
      </parameter>
    </parameters>
  </procedure>
</procedures>
