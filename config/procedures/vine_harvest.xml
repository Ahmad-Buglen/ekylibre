<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="vine_harvest" natures="grape_harvest" version="0">
    <variables>
      <variable name="grape_reaper_driver" abilities="drive(reaper)" roles="grape_harvest-doer"/>
      <variable name="grape_reaper" variety="reaper" abilities="harvest(grape)" roles="grape_harvest-tool"/>
      <variable name="cultivation" variety="vitis_vinifera" abilities="produce(fruit)" roles="grape_harvest-target" default-shape=":cultivation" default-actor="variant_localized_in_storage">
        <handler indicator="shape">
          <converter to="shape" forward="intersection(value, cultivation.shape)" backward="value"/>
          <converter to="population" forward="area(value) / cultivation..net_surface_area(square_meter)"/>
        </handler>
      </variable>
      <variable name="fruits" variety="grape" derivative-of="variety: cultivation" new="produced-by: cultivation" roles="grape_harvest-output" default-name="{{variant}} {{birth_year}} ({{container}})">
        <handler indicator="population"/>
        <handler indicator="net_mass" unit="ton" to="population" backward="value * self..net_mass(ton)" forward="value / self..net_mass(ton)"/>
        <handler name="net_mass_in_kilogram" indicator="net_mass" unit="kilogram" to="population" backward="value * self..net_mass(kilogram)" forward="value / self..net_mass(kilogram)"/>
        <handler indicator="mass_area_density" unit="kilogram_per_hectare" to="population" backward="(value * self..net_mass(kilogram)) / cultivation.net_surface_area(hectare)" forward="(value * cultivation.net_surface_area(hectare)) / self..net_mass(kilogram)"/>
        <handler name="mass_area_density_in_hectoliter_per_hectare" indicator="mass_area_density" unit="hectoliter_per_hectare" to="population" backward="(value * self..net_volume(hectoliter)) / cultivation.net_surface_area(hectare)" forward="(value * cultivation.net_surface_area(hectare)) / self..net_volume(hectoliter)"/>
      </variable>
    </variables>
    <operations>
      <operation id="1">
        <!-- Operation 100 (4 minutes) -->
        <task do="[grape_reaper_driver] moves in [grape_reaper]"/>
        <!-- Operation 200 (18 minutes) -->
        <task do="[grape_reaper] moves at [cultivation]"/>
        <!-- Operation 300 -->
        <task do="[cultivation] produces [fruits]"/>
        <task do="[fruits] is at [cultivation]"/>
        <!-- Operation 400 (18 minutes) -->
        <task do="[grape_reaper] moves in default storage"/>
        <!-- Operation 500 (4 minutes) -->
        <task do="[grape_reaper_driver] moves in default storage"/>
      </operation>
    </operations>
  </procedure>
</procedures>
