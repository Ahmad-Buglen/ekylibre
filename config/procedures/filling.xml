<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="filling" natures="filling" version="0">
    <variables>
      <variable name="items" variety="preparation" roles="filling-input_origin"/>
      <variable name="items_to_fill" variety=":items" derivative-of=":items" new="parted-from: items" roles="filling-input" default-name="{{variant}} - [{{derivative_of}}]" default-population=":items">
        <handler indicator="population"/>
      </variable>
      <variable name="tank" roles="filling-target"/>
      <variable name="doer" abilities="move" roles="filling-doer"/>
    </variables>
    <operations>
      <operation id="1">
        <task do="[items] parts with [items_to_fill]"/>
        <task do="[items_to_fill] moves in [tank]"/>
      </operation>
    </operations>
  </procedure>
</procedures>
