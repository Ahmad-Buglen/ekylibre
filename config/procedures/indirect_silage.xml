<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="indirect_silage" natures="straw_processing" version="0">
    <variables>
      <variable name="forager" variety="forager" abilities="harvest(plant)" roles="straw_processing-tool"/>
      <variable name="forager_driver" abilities="drive(forager)" roles="straw_processing-doer"/>
      <variable name="straw_to_bunch" variety="straw" derivative-of="poaceae" roles="straw_processing-input"/>
      <variable name="silage" new="produced-by: straw_to_bunch" roles="straw_processing-output" default-name="{{variant}} {{birth_year}} ({{container}})">
        <handler indicator="population"/>
        <handler indicator="net_mass" unit="ton" to="population" backward="value * self..net_mass(ton)" forward="value / self..net_mass(ton)"/>
        <handler indicator="net_volume" unit="cubic_meter" to="population" backward="value * self..net_volume(cubic_meter)" forward="value / self..net_volume(cubic_meter)"/>
      </variable>
    </variables>
    <operations>
      <operation id="1">
        <!-- Operation 100 (4 minutes) -->
        <task do="[forager_driver] moves in [forager]"/>
        <!-- Operation 200 (18 minutes) -->
        <task do="[forager] moves at [straw_to_bunch]"/>
        <!-- Operation 300 -->
        <task do="[forager] consumes [straw_to_bunch]"/>
        <task do="[forager] produces [silage]"/>
        <task do="[silage] is at [cultivation]"/>
        <!-- Operation 400 (18 minutes) -->
        <task do="[forager] moves in default storage"/>
        <!-- Operation 500 (4 minutes) -->
        <task do="[forager_driver] moves in default storage"/>
      </operation>
    </operations>
  </procedure>
</procedures>
