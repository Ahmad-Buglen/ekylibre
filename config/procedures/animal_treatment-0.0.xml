<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <!-- ######################################## TRAITEMENT VETERINAIRE ########################################### -->
  <procedure name="animal_treatment" natures="animal_illness_treatment" version="0.0" status="frozen">
    <variables>
      <variable name="animal"           variety="animal" abilities="produce"/>
      <variable name="molecule"         variety="animal_medicine"/>
      <variable name="molecule_to_give" variant=":molecule" new="quantity=?"/>
      <variable name="caregiver"        variety="worker"/>
    </variables>
    <operations>
      <operation id="100">
        <task do="[caregiver] moves-to [animal]"/>
        <task do="[caregiver] measures [animal:animal_disease_state]"/>
      </operation>
      <operation id="200" duration="10 minutes">
        <task do="[molecule] parts-with [molecule_to_give]"/>
        <task do="[animal] consumes [molecule_to_give]"/>    
      </operation>
    </operations>        
  </procedure>

</procedures>
