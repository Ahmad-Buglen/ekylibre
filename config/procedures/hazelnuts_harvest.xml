<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="hazelnuts_harvest" natures="nuts_harvest" version="0">
    <variables>
      <variable name="driver" abilities="drive(reaper)" roles="nuts_harvest-doer"/>
      <variable name="nuts_harvester" variety="reaper" abilities="harvest(hazelnut)" roles="nuts_harvest-tool"/>
      <variable name="cultivation" variety="plant" abilities="produce(hazelnut)" roles="nuts_harvest-target" default-shape=":cultivation" default-actor="variant_localized_in_storage">
        <handler indicator="shape">
          <converter to="shape" forward="intersection(value, cultivation.shape)" backward="value"/>
          <converter to="population" forward="area(value) / cultivation..net_surface_area(square_meter)"/>
        </handler>
      </variable>
      <variable name="hazelnuts" variety="hazelnut" derivative-of="variety: cultivation" new="produced-by: cultivation" roles="nuts_harvest-output" default-name="{{variant}} [{{birth_day}}/{{birth_month}}/{{birth_year}}] ({{container}})">
        <handler indicator="population"/>
        <handler indicator="net_mass" unit="quintal" to="population" backward="value * self..net_mass(quintal)" forward="value / self..net_mass(quintal)"/>
        <handler name="net_mass_in_ton" indicator="net_mass" unit="ton" to="population" backward="value * self..net_mass(ton)" forward="value / self..net_mass(ton)"/>
        <handler indicator="mass_area_density" unit="quintal_per_hectare" to="population" backward="(value * self..net_mass(quintal)) / cultivation.net_surface_area(hectare)" forward="(value * cultivation.net_surface_area(hectare)) / self..net_mass(quintal)"/>
      </variable>
    </variables>
    <operations>
      <operation id="1">
        <!-- Operation 100 (4 minutes) -->
        <task do="[cropper_driver] moves in [cropper]"/>
        <!-- Operation 200 (18 minutes) -->
        <task do="[cropper] moves at [cultivation]"/>
        <!-- Operation 300 -->
        <task do="[cultivation] produces [hazelnuts]"/>
        <task do="[hazelnuts] is at [cultivation]"/>
      </operation>
    </operations>
  </procedure>
</procedures>
