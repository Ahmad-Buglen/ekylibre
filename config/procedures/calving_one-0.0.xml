<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <!-- ######################################## VELAGE PRODUISANT UN VEAU ########################################### -->
  <procedure name="calving_one" natures="viviparous_birth" version="0.0" status="frozen">
    <variables>
      <variable name="mother_animal" variety="bos" abilities="produce"/>
      <variable name="child_animal" variety="bos" new="mother=[mother_animal], father=?, quantity=1, unit=u, weight=?, mammalia_twins_condition=none"/>
      <variable name="person" variety="worker"/>
    </variables>
    <operations>
      <operation id="100">
        <task do="[mother_animal] produces [child_animal]"/><!-- une vache produit un veau -->
        <task do="[person] measures [child_animal:mammalia_born_condition]"/>
        <task do="[person] measures [mother_animal:mammalia_born_cycle]"/>
        <task do="[person] measures [mother_animal:mammalia_reproduction_method_embryo_transplant]"/>
        <task do="[person] measures [mother_animal:mammalia_reproduction_event_abortion]"/>
       </operation>
    </operations>        
  </procedure>
</procedures>
