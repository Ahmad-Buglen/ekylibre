<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="hoeing" natures="raking" version="0.0" status="frozen">
    <variables>
      <variable name="driver" variety="worker" abilities="drive(tractor)" roles="raking-doer"/><!-- paramètre réprésentant des objets de type Humain qui possede la compétence "Conduire un ensemble tracteur + épandeur"  -->
      <variable name="tractor" variety="equipment" abilities="tow(equipment),catch"/><!-- paramètre réprésentant des objets qui possede la compétence "Tracter"  -->
      <variable name="land_parcel" variety="cultivable_zone" roles="raking-target"/>
      <variable name="cultivator" type="equipment" abilities="hoe" /><!-- paramètre réprésentant des objets qui possede la compétence "Travailler le sol"  -->
    </variables>
    <operations>
      <operation id="100" duration="4 minutes">
        <task do="[driver] moves in [tractor]"/><!-- le chauffeur se déplace vers le tracteur et rentre dedant (?) -->
      </operation>
      <operation id="200" duration="7 minutes">
        <task do="[tractor] moves at [cultivator]"/><!-- le chauffeur et le tracteur se déplace vers le lieu actuel de la charrue-->
      </operation>
      <operation id="300" duration="4 minutes">
        <task do="[tractor] catches [cultivator]"/><!-- le chauffeur attache la charrue au tracteur -->
      </operation>
      <operation id="400" duration="18 minutes">
        <task do="[tractor] moves in [land_parcel]"/><!-- le chauffeur + son tracteur et sa charrue se déplace vers la parcelle et rentre dedant (?) -->
      </operation>
      <operation id="500">
        <task do="[tractor] acts on [land_parcel]"/><!-- le tracteur et le chauffeur laboure la parcelle-->
        <task do="[driver] measures [land_parcel|soil_cultural_state]"/><!-- le chauffeur du tracteur mesure / observe l'état de la parcelle au niveau de sa surface (valeur attendue = raw)-->
      </operation>
      <operation id="600" duration="18 minutes">
        <task do="[tractor] moves in default storage of [cultivator]"/>
      </operation>
      <operation id="700" duration="4 minutes">
        <task do="[tractor] releases [cultivator]"/>
      </operation>
      <operation id="800" duration="7 minutes">
        <task do="[tractor] moves in default storage"/>
      </operation>
      <operation id="900" duration="4 minutes">
        <task do="[driver] moves in default storage"/>
      </operation>
    </operations>
  </procedure>
</procedures>
