<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="raking" natures="raking" version="0.0" status="frozen">
    <variables>
      <variable name="driver" variety="worker" abilities="drive(tractor)" roles="raking-doer"/><!-- paramètre réprésentant des objets de type Humain qui possede la compétence "Conduire un ensemble tracteur + épandeur"  -->
      <variable name="tractor" variety="equipment" abilities="tow(equipment),catch"/><!-- paramètre réprésentant des objets qui possede la compétence "Tracter"  -->
      <variable name="land_parcel" variety="cultivable_land_parcel" roles="raking-target"/>
      <variable name="harrow" type="equipment" abilities="plow" /><!-- paramètre réprésentant des objets qui possede la compétence "Travailler le sol"  -->
    </variables>
    <operations>
      <operation id="t100">
        <task do="[driver] moves-in [tractor]"/><!-- le chauffeur se déplace vers le tracteur et rentre dedant (?) -->
      </operation>
      <operation id="200">
        <task do="[tractor] moves-to [harrow]"/><!-- le chauffeur et le tracteur se déplace vers le lieu actuel de la charrue-->
      </operation>
      <operation id="300">
        <task do="[tractor] catches [harrow]"/><!-- le chauffeur attache la charrue au tracteur -->
      </operation>
      <operation id="400">
        <task do="[tractor] moves-to [land_parcel]"/><!-- le chauffeur + son tracteur et sa charrue se déplace vers la parcelle et rentre dedant (?) -->
      </operation>
      <operation id="500">
        <task do="[tractor] acts on [land_parcel]"/><!-- le tracteur et le chauffeur laboure la parcelle-->
        <task do="[driver] measures [land_parcel:cultural_soil_state]"/><!-- le chauffeur du tracteur mesure / observe l'état de la parcelle au niveau de sa surface (valeur attendue = raw)-->
      </operation>
    </operations>        
  </procedure>
</procedures>
