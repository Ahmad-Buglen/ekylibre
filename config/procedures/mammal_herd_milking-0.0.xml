<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <!-- ######################################## PRODUCTION LAITIERE ########################################### -->
  <procedure name="mammal_herd_milking" natures="milk_production" version="0.0" status="frozen">
    <variables>
      <variable name="mammal_to_milk_herd" variety="animal_group" derivative-of="mammalia" abilities="produce(milk)"  roles="milk_production-target"/>
      <variable name="milk"   variety="milk" derivative-of="variety: mammal_to_milk_herd" roles="milk_production-output" new="produced-by: mammal_to_milk_herd"/>
      <variable name="caregiver" variety="worker" abilities="milk(mammalia)"   roles="milk_production-doer"/>
      <variable name="container" abilities="store(milk)"/>
    </variables>
    <operations>
      <operation id="100" duration="10 minutes">
        <task do="[caregiver] moves at [mammal_to_milk_herd]"/>
      </operation>
      <operation id="200">
        <task do="[mammal_to_milk_herd] produces [milk]"/>
        <task do="[milk] is in [container]"/>
      </operation>
    </operations>        
  </procedure>
</procedures>
