<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="grape_pressing" categories="viticulture_transformation" actions="grape_pressing">
    <variables>
      <variable name="grape" type="input" variety="grape" derivative-of="vitis">
        <handler indicator="population"/>
      </variable>
      <variable name="tank_for_wine" type="target" variety="tank" abilities="store_liquid" default-actor="storage"/>
      <variable name="tank_for_residue" type="tool" variety="tank" abilities="store_liquid"/>
      <variable name="press" type="tool" variety="equipment" abilities="press(grape)"/>
      <variable name="wine_man" type="doer" abilities="move, drive(press)"/>
      <variable name="juice" type="output" variety="juice" derivative-of="variety: grape_to_press" default-name="{{variant}} {{birth_year}} ({{container}})">
        <handler indicator="population"/>
        <handler indicator="net_volume" unit="hectoliter" to="population" backward="value * self..net_volume(hectoliter)" forward="value / self..net_volume(hectoliter)"/>
        <handler indicator="net_mass" unit="ton" to="population" backward="value * self..net_mass(ton)" forward="value / self..net_mass(ton)"/>
        <handler name="net_mass_in_kilogram" indicator="net_mass" unit="kilogram" to="population" backward="value * self..net_mass(kilogram)" forward="value / self..net_mass(kilogram)"/>
      </variable>
      <variable name="residue" type="output" variety="pomace" derivative-of=": grape_to_press" default-name="{{variant}} {{birth_year}} ({{container}})">
        <handler indicator="population"/>
        <handler indicator="net_mass" unit="kilogram" to="population" backward="value * self..net_mass(kilogram)" forward="value / self..net_mass(kilogram)"/>
      </variable>
    </variables>
  </procedure>
</procedures>
