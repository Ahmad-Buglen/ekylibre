<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="cutting" natures="cutting" version="0" status="frozen">
    <variables>
      <variable name="tractor"     abilities="catch(equipment)" roles="cutting-tool"/>
      <variable name="cutter"      abilities="cut" roles="cutting-tool"/>
      <variable name="cultivation" variety="plant" roles="cutting-target"/>
      <variable name="driver"      abilities="drive(tractor)" roles="cutting-doer"/>
    </variables>
    <operations>
      <operation id="100" duration="4 minutes">
        <task do="[driver] moves in [tractor]"/>
      </operation>
      <operation id="200" duration="7 minutes">
        <task do="[tractor] moves at [cutter]"/>
      </operation>
      <operation id="300" duration="4 minutes">
        <task do="[tractor] catches [cutter]"/>
      </operation>
      <operation id="400" duration="18 minutes">
        <task do="[tractor] moves at [cultivation]"/>
      </operation>
      <operation id="500">
        <task do="[tractor] acts on [cultivation]"/>
      </operation>
      <operation id="600" duration="18 minutes">
        <task do="[tractor] moves in default storage of [cutter]"/>
      </operation>
      <operation id="700" duration="4 minutes">
        <task do="[tractor] releases [cutter]"/>
      </operation>
      <operation id="800" duration="7 minutes">
        <task do="[tractor] moves in default storage"/>
      </operation>
      <operation id="900" duration="4 minutes">
        <task do="[driver] moves in default storage"/>
      </operation>
    </operations>
  </procedure>
</procedures>
