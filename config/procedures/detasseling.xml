<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="detasseling" natures="garden_human_working" version="0">
    <variables>
      <variable name="doer" variety="worker" abilities="move" roles="garden_human_working-doer"/>
      <variable name="cultivation" variety="plant" roles="garden_human_working-target" default-shape=":cultivation" default-actor="variant_localized_in_storage">
        <handler indicator="shape">
          <converter to="shape" forward="intersection(value, cultivation.shape)" backward="value"/>
          <converter to="population" forward="area(value) / cultivation..net_surface_area(square_meter)"/>
        </handler>
      </variable>
    </variables>
    <operations>
      <operation id="1">
        <!-- Operation 500 -->
        <task do="[doer] acts on [cultivation]"/>
      </operation>
    </operations>
  </procedure>
</procedures>
