<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="calving_twin" natures="viviparous_birth" version="0">
    <variables>
      <variable name="mother" variety="bos" abilities="produce(bos)" roles="viviparous_birth-target"/>
      <variable name="first_child" variety="bos" new="produced-by: mother" roles="viviparous_birth-output"/>
      <variable name="second_child" variety="bos" new="produced-by: mother" roles="viviparous_birth-output"/>
      <variable name="caregiver" abilities="move, administer_care(bos)"/>
    </variables>
    <operations>
      <operation id="1">
        <!-- Operation 100 -->
        <task do="[mother] produces [first_child]"/>
        <task do="[first_child] is at [mother]"/>
        <task do="[caregiver] measures [first_child|mammalia_birth_condition]"/>
        <!-- Operation 200 -->
        <task do="[mother] produces [second_child]"/>
        <task do="[second_child] is at [mother]"/>
        <task do="[caregiver] measures [second_child|mammalia_birth_condition]"/>
        <!-- Operation 300 (5 minutes) -->
        <task do="[caregiver] measures [mother|mammalia_birth_count]"/>
        <task do="[caregiver] measures [mother|mammalia_reproduction_method_embryo_transplant]"/>
        <task do="[caregiver] measures [mother|mammalia_reproduction_event_abortion]"/>
      </operation>
    </operations>
  </procedure>
</procedures>
