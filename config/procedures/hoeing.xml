<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="hoeing" natures="raking, physical_weed_killing" version="0" duration="land_parcel.net_surface_area(hectare) * 0.54">
    <variables>
      <variable name="land_parcel" variety="cultivable_zone" roles="raking-target, physical_weed_killing-target" default-shape=":land_parcel" default-actor="storage">
        <handler indicator="shape">
          <converter to="shape" forward="intersection(value, land_parcel.shape)" backward="value"/>
          <converter to="population" forward="area(value) / land_parcel..net_surface_area(square_meter)"/>
        </handler>
      </variable>
      <variable name="driver" abilities="move, drive(tractor)" roles="raking-doer, physical_weed_killing-doer"/>
      <variable name="tractor" variety="equipment" abilities="catch(equipment)" roles="raking-tool, physical_weed_killing-tool"/>
      <variable name="cultivator" variety="equipment" abilities="hoe" roles="raking-tool, physical_weed_killing-tool"/>
    </variables>
    <operations>
      <operation id="1">
        <!-- Operation 500 -->
        <task do="[tractor] acts on [land_parcel]"/>
        <task do="[driver] measures [land_parcel|soil_cultural_state]" id="readstate"/>
      </operation>
    </operations>
  </procedure>
</procedures>
