<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="hoeing" natures="raking,plant_physical_weed" version="0" status="frozen">
    <!-- Binage d'une parcelle -->
    <variables>

      <variable name="land_parcel" variety="cultivable_zone" roles="raking-target,plant_physical_weed-target" default-actor="storage" need="shape" default-shape=":land_parcel">
        <handler indicator="shape">
          <converter to="shape"      forward="intersection(value, land_parcel.shape)" backward="value"/>
          <converter to="population" forward="area(value) / land_parcel..net_surface_area(square_meter)"/>
        </handler>
      </variable>

      <variable name="driver" abilities="move, drive(tractor)" roles="raking-doer,plant_physical_weed-doer"/>
      <variable name="tractor" variety="equipment" abilities="catch(equipment)" roles="raking-tool,plant_physical_weed-tool"/>
      <variable name="cultivator"    variety="equipment" abilities="hoe" roles="raking-tool,plant_physical_weed-tool"/>

    </variables>
    <operations>
      <operation id="400" duration="18 minutes">
        <task do="[tractor] moves in [land_parcel]"/><!-- le chauffeur + son tracteur et sa charrue se déplace vers la parcelle et rentre dedant (?) -->
      </operation>
      <operation id="500">
        <task do="[tractor] acts on [land_parcel]"/><!-- le tracteur et le chauffeur laboure la parcelle-->
        <task do="[driver] measures [land_parcel|soil_cultural_state]"/><!-- le chauffeur du tracteur mesure / observe l'état de la parcelle au niveau de sa surface (valeur attendue = raw)-->
      </operation>
    </operations>
  </procedure>
</procedures>
