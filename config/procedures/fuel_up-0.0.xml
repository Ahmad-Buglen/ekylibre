<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <!-- ######################################## TRAITEMENT VETERINAIRE ########################################### -->
  <procedure name="fuel_up" natures="equipment_maintenance" version="0.0" status="frozen">
    <variables>
      <variable name="equipment"      variety="equipment" abilities="consume(fuel)" roles="equipment_maintenance-target"/>
      <variable name="fuel"           variety="fuel" />
      <variable name="fuel_to_input"  new="parted-from: fuel" roles="equipment_maintenance-input" need="population"/>
      <variable name="mechanic"       variety="worker" roles="equipment_maintenance-doer"/>
    </variables>
    <operations>
      <operation id="100">
        <task do="[mechanic] moves at [equipment]"/>
        <task do="[mechanic] measures [equipment|healthy]"/>
      </operation>
      <operation id="200" duration="10 minutes">
        <task do="[fuel] parts with [fuel_to_input]"/>
        <task do="[equipment] consumes [fuel_to_input]"/>
      </operation>
    </operations>
  </procedure>

</procedures>
