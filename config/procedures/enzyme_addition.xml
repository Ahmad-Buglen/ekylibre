<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="enzyme_addition" natures="addition" version="0">
    <variables>
      <variable name="tank" variety="tank" abilities="store_liquid" default-actor="storage"/>
      <variable name="wine_to_treat" variety="wine" roles="addition-target" default-actor="first_localized_in: tank"/>
      <variable name="oenological_intrant" variety="matter" abilities="catalyze(wine)" roles="addition-input_origin"/>
      <variable name="oenological_intrant_to_put" variety=":oenological_intrant" derivative-of=":oenological_intrant" new="parted-from: oenological_intrant" roles="addition-input">
        <handler indicator="population"/>
      </variable>
      <variable name="wine_man" variety="worker" abilities="move" roles="addition-doer"/>
    </variables>
    <operations>
      <operation id="1">
        <!-- Operation 100 (4 minutes) -->
        <task do="[wine_man] moves at [tank]"/>
        <!-- Operation 200 (4 minutes) -->
        <task do="[oenological_intrant] parts with [oenological_intrant_to_put]"/>
        <!-- Operation 300 -->
        <task do="[oenological_intrant_to_put] moves at [wine_to_treat]"/>
        <task do="[wine_to_treat] consumes [oenological_intrant_to_put]"/>
        <!-- Operation 400 (4 minutes) -->
        <task do="[wine_man] moves in default storage"/>
      </operation>
    </operations>
  </procedure>
</procedures>
