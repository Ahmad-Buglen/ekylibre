<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <!-- ######################################## PRODUCTION LAITIERE ########################################### -->
  <procedure name="animal_milking" natures="animal_production" version="0.0" status="frozen">
    <variables>
      <variable name="animal" variety="mammalia" abilities="produce(milk)"  roles="animal_production-target"/>
      <variable name="milk"   variety="milk" derivative-of="variety:animal" roles="animal_production-output" new="produced-by: animal"/>
      <variable name="person" variety="worker" abilities="milk(mammalia)"   roles="animal_production-doer"/>
      <variable name="container" abilities="store(milk)"/>
    </variables>
    <operations>
      <operation id="100" duration="10 minutes">
        <task do="[person] moves at [animal]"/>
      </operation>
      <operation id="200">
        <task do="[animal] produces [milk]"/>
        <task do="[milk] is in [container]"/>
      </operation>
    </operations>        
  </procedure>
</procedures>
