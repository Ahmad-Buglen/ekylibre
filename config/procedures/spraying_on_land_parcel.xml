<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="spraying_on_land_parcel" natures="plant_illness_treatment" version="0" status="frozen">
    <variables>
      <variable name="plant_medicine"          variety="preparation" abilities="care(plant)" roles="plant_illness_treatment-input_origin"/>
      <variable name="plant_medicine_to_spray" new="parted-from: plant_medicine" roles="plant_illness_treatment-input" default-population=":plant_medicine" default-name="{{variant}} - [{{birth_day}}/{{birth_month}}/{{birth_year}}]">
      <handler indicator="population" />
      <handler indicator="mass_area_density"   unit="kilogram_per_hectare"   to="population" if="plant_medicine_to_spray? &amp; plant_medicine_to_spray..net_mass(kilogram) > 0"
                 forward="(value * land_parcel.net_surface_area(hectare)) / self..net_mass(kilogram)"
                 backward="(value * self..net_mass(kilogram)) / land_parcel.net_surface_area(hectare)"
                 /> <!-- kg / ha -->
      <handler indicator="volume_area_density"   unit="liter_per_hectare"   to="population"
        if="plant_medicine_to_spray? &amp; plant_medicine_to_spray..net_volume(liter) > 0"
                 forward="(value * land_parcel.net_surface_area(hectare)) / self..net_volume(liter)"
                 backward="(value * self..net_volume(liter)) / land_parcel.net_surface_area(hectare)"
                 /> <!-- l / ha -->
      </variable>
      <variable name="tractor" variety="equipment" abilities="move, catch(sprayer)" roles="plant_illness_treatment-tool"/>
      <variable name="sprayer" abilities="spray" roles="plant_illness_treatment-tool"/>
      <variable name="driver"  abilities="move, drive(tractor), drive(sprayer)" roles="plant_illness_treatment-doer"/>
      <variable name="land_parcel" abilities="store(plant)" roles="plant_illness_treatment-target" need="shape" default-actor="storage" default-shape=":land_parcel">
        <handler indicator="shape">
          <converter to="shape"      forward="intersection(value, land_parcel.shape)" backward="value"/>
          <converter to="population" forward="area(value) / land_parcel..net_surface_area(square_meter)"/>
        </handler>
      </variable>
    </variables>
    <operations>
      <operation id="700" duration="18 minutes">
        <task do="[tractor] moves in [land_parcel]"/>
        <!-- le chauffeur + son tracteur et son épandeur chargé de fumier se déplace vers la parcelle et rentre dedant (?) -->
      </operation>
      <operation id="800">
        <!-- tant que le [tractor] travaille (? = sous-entendu le tracteur tourne,le conducteur roule, le pulvé tourne) les task tournent -->
        <task do="[plant_medicine] parts with [plant_medicine_to_spray]"/>
        <task do="[plant_medicine_to_spray] moves in [land_parcel]"/><!-- le traitement tombe sur la sole de blé car le pulvé tourne (?) -->
        <task do="[land_parcel] consumes [plant_medicine_to_spray]"/><!-- la sole de blé consomme le traitement épandu car il se dépose sur les feuilles des plants de blé -->
        <!-- Le bioprocess lié doit faire l'action suivante : [cultivation] consumes [fertilizer] in [land_parcel] -->
        <!-- À terme, on devrait être capable de faire IF l'épandeur est vide alors j'arrete de travailler -->
        <!-- et je retourne charger de l'engrais sur le tas global-->
      </operation>
    </operations>
  </procedure>
</procedures>
