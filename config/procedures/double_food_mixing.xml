<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="double_food_mixing" natures="mixing" version="0" status="frozen">
    <variables> 
      <variable name="food_first_input"        variety="preparation" abilities="feed(animal)"/>
      <variable name="food_first_input_to_use" new="parted-from: food_first_input" roles="mixing-input" default-name="{{variant}} ({{container}})">
        <handler indicator="population" />
        <handler indicator="net_volume"            unit="hectoliter"               to="population" if="food_first_input? &amp; food_first_input.net_volume(liter) > 0"
                 forward="value / self..net_volume(hectoliter)"
                 backward="value * self..net_volume(hectoliter)"
                 /> <!-- l    -->
        <handler indicator="net_volume"            unit="liter"               to="population" if="food_first_input? &amp; food_first_input.net_volume(liter) > 0"
                 forward="value / self..net_volume(liter)"
                 backward="value * self..net_volume(liter)"
                 /> <!-- l    -->
      </variable>
      <variable name="food_second_input"        variety="preparation" abilities="feed(animal)"/>
      <variable name="food_first_input_to_use" new="parted-from: food_second_input" roles="mixing-input" default-name="{{variant}} ({{container}})">
	<handler indicator="population" />
      </variable>
      <variable name="worker"                   roles="mixing-doer"/>
      <variable name="food_mixing"  variety="preparation" new="produced-by: food_first_input" roles="mixing-output" hidden="true" default-name="{{variant}} [{{birth_month_abbr}}. {{birth_year}}] ({{container}})" >
	<handler indicator="population" />
      </variable>
    <variable name="food_storage" variety="building_division" abilities="store(preparation)" /> 
    </variables>
    <operations>
      <operation id="100" duration="4 minutes">
        <task do="[worker] moves at [food_first_input]"/>
      </operation>
      <operation id="200" duration="4 minutes">
        <task do="[food_first_input] parts with [food_first_input_to_use]"/>
        <task do="[food_second_input] parts with [food_second_input_to_use]"/>
      </operation>
      <operation id="300">
        <task do="[food_first_input_to_use] and [food_second_input_to_use] are mixed into [food_mixing]"/>
      </operation>
      <operation id="400" duration="4 minutes">
        <task do="[food_mixing] moves in [food_storage]"/>
      </operation>
      <operation id="500" duration="4 minutes">
        <task do="[worker] moves in default storage"/>
      </operation>
    </operations>
  </procedure>
</procedures>
