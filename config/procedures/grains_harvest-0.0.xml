<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="grains_harvest" natures="harvest" version="0.0" status="frozen">
    <variables>
      <!-- paramètre réprésentant des objets qui possede la compétence "Semer"  -->
      <variable name="cropper_driver" variety="worker" abilities="cropper_driving" roles="harvest-doer"/>
      <!-- paramètre réprésentant des objets de type Humain qui possede la compétence "Conduire un ensemble de semis" -->
      <variable name="cropper" type="equipment" abilities="harvest(plant)" roles="harvest-equipment"/>
      <!-- paramètre réprésentant des objets de type Humain qui possede la compétence "Conduire un ensemble de semis" -->
      <variable name="culture" variety="plant" roles="harvest-target"/>
      <variable name="grains" same-variety-of="culture" derivative="grain" new="quantity=?, unit=?" roles="harvest-output"/>
      <variable name="straw" same-variety-of="culture" derivative= "straw" new="quantity=?, unit=?" roles="harvest-output"/>
    </variables>
    <operations>
      <operation id="100" duration="4 minutes">
        <task do="[cropper_driver] moves-in [cropper]"/>
        <!-- le chauffeur se déplace vers la moissonneuse et rentre dedant (?) -->
      </operation>
      <operation id="200" duration="18 minutes">
        <task do="[cropper] moves-to [culture]"/>
        <!-- le chauffeur et la moissonneuse se déplace vers le lieu à récolter -->
      </operation>
      <operation id="300">
        <!-- tant que le [cropper] travaille (? = sous-entendu la moissonneuse tourne,le conducteur roule, le batteur tourne) les sub-task tournent -->
        <task do="[culture] produces [grains]"/>
        <task do="[culture] produces [straw]"/>
        <!-- le traitement tombe sur la sole de blé car le pulvé tourne (?) -->
        <task do="[grains] moves-in [cropper]"/>
        <!-- la sole de blé consomme le traitement épandu car il se dépose sur les feuilles des plants de blé -->
        <task do="[straw] moves-to [culture]"/>
        <task do="[culture] dies"/>
      </operation>
      <operation id="400" duration="4 minutes">
        <task do="[grains] is-delivered"/>
      </operation>
      <operation id="500" duration="18 minutes">
        <task do="[cropper] moves-in-default-storage"/>
      </operation>        
      <operation id="600" duration="4 minutes">
        <task do="[cropper_driver] moves-in-default-storage"/>
      </operation>
    </operations>
  </procedure>
</procedures>
