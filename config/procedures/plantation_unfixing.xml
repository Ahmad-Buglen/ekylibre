<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="plantation_unfixing" categories="crop_maintenance, harvesting" actions="plantation_unfixing">
    <variables>
      <variable name="driver" type="doer" abilities="move"/>
      <variable name="cultivation" type="target" default-shape=":cultivation" default-actor="variant_localized_in_storage">
        <handler indicator="shape">
          <converter to="shape" forward="intersection(value, cultivation.shape)" backward="value"/>
          <converter to="population" forward="area(value) / cultivation..net_surface_area(square_meter)"/>
        </handler>
      </variable>
      <variable name="tractor" type="tool" variety="equipment" abilities="tow(equipment)"/>
      <variable name="compressor" type="tool" variety="equipment" abilities="blow"/>
    </variables>
  </procedure>
</procedures>
