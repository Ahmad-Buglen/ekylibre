<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="manual_feeding" natures="manual_food_supply" version="0">
    <variables>
      <variable name="herd" variety="animal_group" derivative-of="bos" roles="manual_food_supply-target" default-actor="storage"/>
      <variable name="silage" variety="preparation" abilities="feed(bos)" roles="manual_food_supply-input_origin"/>
      <variable name="silage_to_give" variety=":silage" derivative-of=":silage" new="parted-from: silage" roles="manual_food_supply-input" default-name="{{variant}} [{{birth_day}}/{{birth_month}}/{{birth_year}}] ({{container}})">
        <handler indicator="population"/>
        <handler indicator="net_mass" unit="ton" if="silage.net_mass?" to="population" backward="value * self..net_mass(ton)" forward="value / self..net_mass(ton)"/>
        <handler name="food_mass_per_animal" indicator="net_mass" unit="kilogram" if="members_count(herd) &gt; 0 &amp; silage.net_mass?" to="population" backward="value * (self..net_mass(kilogram) / members_count(herd))" forward="value * (members_count(herd) / self..net_mass(kilogram))"/>
        <handler indicator="net_volume" unit="cubic_meter" if="silage.net_volume?" to="population" backward="value * self..net_volume(cubic_meter)" forward="value / self..net_volume(cubic_meter)"/>
        <handler name="dry_matter_mass" indicator="dry_matter_rate" unit="ton" if="silage.net_mass? &amp; silage.dry_matter_rate?" to="population" backward="value * ( self..net_mass(ton) * self.dry_matter_rate(mass_percent) / 100)" forward="value / ( self..net_mass(ton) * self.dry_matter_rate(mass_percent) / 100)"/>
      </variable>
      <variable name="caregiver" abilities="administer_care(animal), move" roles="manual_food_supply-doer"/>
    </variables>
    <operations>
      <operation id="1">
        <!-- Operation 400 (2 minutes) -->
        <task do="[caregiver] moves at [silage]"/>
        <!-- Operation 500 (15 minutes) -->
        <task do="[silage] parts with [silage_to_give]"/>
        <!-- Operation 600 (2 minutes) -->
        <task do="[caregiver] moves at [herd]"/>
        <task do="[silage_to_give] moves at [herd]"/>
        <!-- Operation 700 (15 minutes) -->
        <task do="[herd] consumes [silage_to_give]"/>
        <!-- Operation 800 (2 minutes) -->
        <task do="[caregiver] moves in default storage"/>
      </operation>
    </operations>
  </procedure>
</procedures>
