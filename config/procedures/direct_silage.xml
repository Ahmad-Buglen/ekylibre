<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="direct_silage" categories="harvesting" actions="harvest">
    <parameters>
      <target name="cultivation" filter="is plant and has indicator shape">
        <attribute name="working_zone" default-value="PRODUCT.shape" if="PRODUCT?"/>
      </target>
      <output name="silage" filter="is silage and derives from plant">
        <handler name="population"/>
        <handler indicator="net_mass" unit="ton"
                 if="population_counting_is(PRODUCT, :decimal) > 0 and PRODUCT..net_mass?"
                 backward="POPULATION * PRODUCT..net_mass(ton)"
                 forward="VALUE / PRODUCT..net_mass(ton)"/>
        <handler indicator="net_volume" unit="cubic_meter"
                 if="population_counting_is(PRODUCT, :decimal) > 0 and PRODUCT..net_volume?"
                 backward="POPULATION * PRODUCT..net_volume(cubic_meter)"
                 forward="VALUE / PRODUCT..net_volume(cubic_meter)"/>
        <handler name="dry_matter_mass_area_density" indicator="mass_area_density" unit="ton_per_hectare"
                 if="PRODUCT..net_mass? and sum_working_zone_areas(land_parcel) != 0"
                 backward="(POPULATION * PRODUCT..net_mass(ton)) / sum_working_zone_areas(cultivation, :hectare)"
                 forward="(VALUE * sum_working_zone_areas(cultivation, :hectare)) / PRODUCT..net_mass(ton)"/>
      </output>
      <tool name="forager" filter="is equipment and can harvest(plant)" cardinality="*"/>
      <doer name="forager_driver"  filter="is worker and can move and can drive(forager)" cardinality="*"/>
    </parameters>
  </procedure>
</procedures>
