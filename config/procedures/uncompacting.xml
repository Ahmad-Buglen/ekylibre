<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="uncompacting" natures="plowing" version="0" duration="land_parcel.net_surface_area(hectare) * 1.02">
    <variables>
      <variable name="driver" abilities="drive(tractor)" roles="plowing-doer"/>
      <variable name="tractor" variety="equipment" abilities="tow(equipment), catch(equipment)" roles="plowing-tool"/>
      <variable name="land_parcel" variety="cultivable_zone" roles="plowing-target" default-shape=":land_parcel" default-actor="storage">
        <handler indicator="shape">
          <converter to="shape" forward="intersection(value, land_parcel.shape)" backward="value"/>
          <converter to="population" forward="area(value) / land_parcel..net_surface_area(square_meter)"/>
        </handler>
      </variable>
      <variable name="harrow" abilities="uncompact" roles="plowing-tool"/>
    </variables>
    <operations>
      <operation id="1">
        <task do="[tractor] acts on [land_parcel]"/>
        <task do="[driver] measures [land_parcel|soil_cultural_state]"/>
      </operation>
    </operations>
  </procedure>
</procedures>
