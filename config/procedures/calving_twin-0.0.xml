<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <!-- ######################################## VELAGE PRODUISANT DES JUMEAUX ########################################### -->
  <procedure name="calving_twin" natures="viviparous_birth" version="0.0" status="frozen">
    <variables>
      <variable name="mother_animal" variety="bos" abilities="produce(bos)"/>
      <variable name="child_animal_first" variety="bos" new="mother=[mother_animal], father=?, quantity=1, unit=u, weight=?, mammalia_twins_condition=twins"/>
      <variable name="child_animal_second" variety="bos" new="mother=[mother_animal], father=?, quantity=1, unit=u, weight=?, mammalia_twins_condition=twins"/>
      <variable name="person" variety="worker"/>
    </variables>
    <operations>
      <operation id="100">
        <task do="[mother_animal] produces [child_animal_first]"/><!-- une vache produit le premier veau -->
        <task do="[person] measures [child_animal_first:mammalia_born_condition]"/>
      </operation>
      <operation id="200">
        <task do="[mother_animal] produces [child_animal_second]"/><!-- une vache produit le second veau -->
        <task do="[person] measures [child_animal_second:mammalia_born_condition]"/>
      </operation>
      <operation id="300" duration="5 minutes">
        <task do="[person] measures [mother_animal:mammalia_born_cycle]"/>
        <task do="[person] measures [mother_animal:mammalia_reproduction_method_embryo_transplant]"/>
        <task do="[person] measures [mother_animal:mammalia_reproduction_event_abortion]"/>      
      </operation>
    </operations>        
  </procedure>
</procedures>
