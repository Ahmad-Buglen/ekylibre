<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="watering" natures="plant_irrigation, automatic_soil_enrichment" version="0">
    <variables>
      <variable name="water" variety="water" roles="automatic_soil_enrichment-input_origin"/>
      <variable name="water_to_spread" variety=":water" derivative-of=":water" new="parted-from: water" roles="automatic_soil_enrichment-input, plant_irrigation-input">
        <handler indicator="population"/>
        <handler indicator="mass_area_density" unit="liter_per_square_meter" to="population" backward="(value * self..net_mass(ton)) / cultivation.net_surface_area(hectare)" forward="(value * cultivation.net_surface_area(hectare)) / self..net_mass(ton)"/>
        <handler name="nitrogen_unities_density" indicator="mass_area_density" unit="kilogram_per_hectare" if="self.nitrogen_concentration? &amp; self.nitrogen_concentration(milligram_per_kilogram) &gt; 0" to="population" backward="(value * self..net_mass(kilogram) * (self.nitrogen_concentration(milligram_per_kilogram) / 1000000)) / cultivation.net_surface_area(hectare)" forward="(value * cultivation.net_surface_area(hectare)) / (self..net_mass(kilogram) * self.nitrogen_concentration(milligram_per_kilogram) / 1000000)"/>
      </variable>
      <variable name="spreader" abilities="spread(water)" roles="automatic_soil_enrichment-tool"/>
      <variable name="land_parcel" variety="cultivable_zone" roles="automatic_soil_enrichment-target" default-actor="storage"/>
      <variable name="cultivation" variety="plant" roles="plant_irrigation-target" default-shape=":cultivation" default-actor="variant_localized_in_storage">
        <handler indicator="shape">
          <converter to="shape" forward="intersection(value, cultivation.shape)" backward="value"/>
          <converter to="population" forward="area(value) / cultivation..net_surface_area(square_meter)"/>
        </handler>
      </variable>
    </variables>
    <operations>
      <operation id="1">
        <!-- Operation 400 -->
        <task do="[water] parts with [water_to_spread]"/>
        <task do="[water_to_spread] moves in [land_parcel]"/>
        <task do="[land_parcel] consumes [water_to_spread]"/>
      </operation>
    </operations>
  </procedure>
</procedures>
