<?xml version="1.0" encoding="UTF-8"?>
<nomenclatures xmlns="http://www.ekylibre.org/XML/2013/nomenclatures">
  <nomenclature name="units">
    <attributes>
      <attribute name="dimension" type="choice" nomenclature="dimensions" required="true"/>
      <attribute name="symbol" type="string" required="true"/>
      <attribute name="coefficient" type="decimal" required="true" default="1"/>
      <attribute name="start" type="decimal" required="true" default="0"/>
    </attributes>
    <items>
      <!-- none -->
      <item name="unity" dimension="none" symbol="u"/>

      <!-- temperature -->
      <item name="kelvin"    dimension="temperature" symbol="K"/>
      <item name="celsius"   dimension="temperature" symbol="°C" start="-273.15"/>
      <item name="farenheit" dimension="temperature" symbol="°F" start="-459.67" coefficient="1.8"/>

      <!-- weight -->
      <item name="microgram" dimension="weight" symbol="µg" coefficient="0.000000001"/>
      <item name="milligram" dimension="weight" symbol="mg" coefficient="0.000001"/>
      <item name="gram"      dimension="weight" symbol="g"  coefficient="0.001"/>
      <item name="kilogram"  dimension="weight" symbol="kg"/>
      <item name="quintal"   dimension="weight" symbol="qt" coefficient="100"/>
      <item name="ton"       dimension="weight" symbol="t"  coefficient="1000"/>

      <!-- length -->
      <item name="millimeter" dimension="length" symbol="m" coefficient="0.001"/>
      <item name="meter"      dimension="length" symbol="m"/>
      <item name="kilometer"  dimension="length" symbol="m" coefficient="1000"/>

      <!-- surface_area -->
      <item name="square_meter" dimension="surface_area" symbol="m2"/>
      <item name="are"          dimension="surface_area" symbol="a"  coefficient="100"/>
      <item name="hectare"      dimension="surface_area" symbol="ha" coefficient="10000"/>

      <!-- volume -->
      <item name="cubic_meter" dimension="volume" symbol="m3"/>
      <item name="hectoliter"  dimension="volume" symbol="hl" coefficient="0.1"/>
      <item name="liter"       dimension="volume" symbol="l"  coefficient="0.001"/>

      <!-- time -->
      <item name="second" dimension="time" symbol="s"/>
      <item name="minute" dimension="time" symbol="min" coefficient="60"/>
      <item name="hour"   dimension="time" symbol="h" coefficient="3600"/>

      <!-- electric_current -->
      <item name="ampere" dimension="electric_current" symbol="A"/>
      
      <!-- amount_of_substance -->
      <item name="mole" dimension="amount_of_substance" symbol="mol"/>
 
      <!-- luminous_intensity -->
      <item name="candela" dimension="luminous_intensity" symbol="cd"/>

      <!-- mass_density -->
      <item name="microgram_per_liter" dimension="mass_density" symbol="µg/l" coefficient="1000000"/>
      <item name="milligram_per_liter" dimension="mass_density" symbol="mg/l" coefficient="1000"/>
      <item name="gram_per_liter"      dimension="mass_density" symbol="g/l"/>
      <item name="kilogram_per_liter"  dimension="mass_density" symbol="kg/l" coefficient="0.001"/>

    </items>
  </nomenclature>
</nomenclatures>