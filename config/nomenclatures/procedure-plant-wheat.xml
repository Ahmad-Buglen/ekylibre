<?xml version="1.0" encoding="UTF-8"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="wheat_crop" version="1" status="frozen">
    <variables>
      <variable name="land_parcel" variety="land_parcel"/>
      <variable name="culture" variety="triticum" new="true"/>
    </variables>
    <sub-procedures>
      <!-- ############################## EPANDRE DU FUMIER ######################################## -->
      <sub-procedure id="000" name="organic_fertilizing" required="false" >
        <parameter name="land_parcel"/>
      </sub-procedure>
      <!-- ######################################### LABOURER ########################################## -->
      <sub-procedure id="010" name="plowing" required="true" conditions="[land_parcel].ground_appearance == covered">
        <parameter name="land_parcel"/>
      </sub-procedure>
      <!-- ######################################### HERSER ########################################## -->
      <sub-procedure id="020" name="superficial_plowing" required="true" conditions="[land_parcel].sowable == false and [land_parcel].ground_appearance == raw">
        <parameter name="land_parcel"/>
      </sub-procedure>
      <!-- ######################################### SEMER ########################################## -->
      <sub-procedure id="030" name="sowing" required="true" conditions="[land_parcel].sowable == true and [land_parcel].in_production == false">
        <parameter name="land_parcel"/>
        <parameter name="seeds" variety="triticum"/>
        <parameter name="culture" />
      </sub-procedure>
      <!-- ############################## EPANDRE DE L'ENGRAIS ######################################## -->
      <sub-procedure id="040" name="mineral_fertilizing" required="false" >
        <parameter name="land_parcel"/>
      </sub-procedure>
      <!-- ############################## TRAITER CHIMIQUEMENT LA CULTURE CONTRE LES MAUVAISES HERBES ######################################## -->
      <sub-procedure id="050" name="chemical_treatment" required="false" >
        <parameter name="culture"/>
        <parameter name="molecule" variety="phytosanitary" abilities="kill(plant)"/>
      </sub-procedure>
      <!-- ######################################## TRAITER CHIMIQUEMENT LA CULTURE CONTRE LES MALADIES FONGIQUES ########################################### -->
      <sub-procedure id="060" name="chemical_treatment" required="false" >
        <parameter name="culture"/>
        <parameter name="molecule" variety="phytosanitary" abilities="kill(fungus)"/>
      </sub-procedure>
      <!-- ######################################## MOISSONNER ########################################### -->
      <sub-procedure id="070" name="seed_harvest" required="true" conditions="[land_parcel].in_production == true and [culture].reproduction_state == grain_senescence">
        <!-- A terme, on doit pouvoir mettre comme condition que [culture] doit Ãªtre dans la phase "Senescence du grain" de son bioprocessus "Reproduction"-->
        <parameter name="culture"/>
      </sub-procedure>
    </sub-procedures>
  </procedure>
</procedures>

