<?xml version="1.0" encoding="UTF-8"?>
<aggregators xmlns="http://www.ekylibre.org/XML/2013/aggregators">
  <aggregator name="phytosanitary_registry" version="0.0" category="land_parcel_management">
    <parameters>
      <parameter name="campaigns" type="record-list" of="campaign" default="currents"/>
    </parameters>
    <section name="campaigns">
      <variable name="company" value="Entity.of_company"/>
      <property name="entity_name" value="company.full_name"/>
      <property name="address" value="company.default_mail_address.coordinate"/>
      <sections for="campaign" in="campaigns">
        <property name="id" of="campaign" level="api"/>
        <title name="name" of="campaign"/>
        <property name="harvest_year" of="campaign"/>
        <!-- looking for all Plant in current campaign -->
        <sections for="plant" in="Plant.of_campaign(campaign)" of-type="record">
          <title name="name" of="plant"/>
          <property name="work_number" of="plant"/>
          <property name="variant_name" of="plant"/>
          <property name="variety" of="plant"/>
          <property name="area" of="plant" type="measure"/>
          <property name="area_in_hectare" value="plant.area" type="measure" level="api"/>
          <property name="id" of="plant" level="api"/>
          <property name="cluster_pac_number" value="plant.localize_in.clusters_work_number"/>
          <property name="cultivable_land_parcel" value="plant.localize_in.name"/>
          <property name="shape_svg" value="plant.localize_in.shape_svg" type="svg" level="api"/>
          <!-- looking for all Production in current cultivable_land_parcel and campaign -->
            <sections for="intervention" in="Intervention.of_nature(:plant_illness_treatment).with_cast(:'plant_illness_treatment-target', plant)" of-type="record">
              <title name="name" of="intervention"/>
              <property name="id" of="intervention" level="api"/>
              <property name="started_at" of="intervention" type="datetime"/>
              <property name="stopped_at" of="intervention" type="datetime"/>
              <property name="duration" value="((intervention.stopped_at - intervention.started_at).to_d/(60*60)).round(2)"/>
              <!-- @TODO find a way to allow input working area<variable name="working_area" value="intervention.casts.of_role(:'plant_illness_treatment-target').first.quantity"/> -->
              <property name="working_area" value="intervention.casts.of_role(:'plant_illness_treatment-target').first.actor.population"/>
              <property name="doer_name" value="intervention.casts.of_role(:'plant_illness_treatment-doer').first.actor.name"/>
              
              <section name="incident" of="intervention.incident">
                <property name="id" level="api"/>
                <property name="name"/>
                <property name="observed_at"/>
                <property name="state" level="api"/>
                <property name="description"/>
              </section> 
              <matrix name="inputs" for="input" in="intervention.casts.of_role(:'plant_illness_treatment-input')">
                <cell name="id" of="input" level="api"/>
                <within of="input.actor">
                  <cell name="name"/>
                  <cell name="unitary_quantity" value="net_volume" type="measure"/>
                  <cell name="unitary_quantity_in_liter" value="net_volume.convert(:liter).value" level="api"/>
                  <cell name="unit_name"/>
                  <cell name="variant_name"/>
                  <cell name="variety" level="api"/>
                </within>
                <cell name="quantity" of="input" type="measure"/>
                <cell name="quantity_in_liter" value="input.actor.net_volume.convert(:liter).value * input.quantity"/>
              </matrix>
            </sections>            
        </sections>
      </sections>
    </section>
  </aggregator>
</aggregators>