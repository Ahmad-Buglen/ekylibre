=unagi do |u|
  -u.cell :indicator do
    %ul
      -if (count = @current_company.undelivered_outgoing_deliveries.size) > 0
        =li_link_to(tc('x_waiting_outgoing_deliveries', :count=>count), :controller=>:outgoing_deliveries, :mode=>:unconfirmed)
      -if (count = @current_company.undelivered_incoming_deliveries.size) > 0
        =li_link_to(tc('x_waiting_incoming_deliveries', :count=>count), :controller=>:incoming_deliveries, :mode=>:unconfirmed)
      -if (count = @current_company.unconfirmed_stock_transfers.size) > 0
        =li_link_to(tc('x_stock_transfers_to_confirm', :count=>count), :controller=>:stock_transfers, :mode=>:unconfirmed)
  -if @current_company.critic_stocks.size > 0
    -u.cell :critic_stocks do
      =list :critic_stocks
