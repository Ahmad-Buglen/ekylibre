- for list in menu[:list]
  - display = false
  - list[:list].each do |action| 
    - display = true if controller.accessible? action[:url]||{:action=>action[:name]}
  - if display
    %div{:class=>"menu"+(list[:class].nil? ? "" : " "+list[:class].to_s)}
      %h2=t("views.#{self.controller.controller_name}.index.#{list[:name].to_s}")
      %ul{:id=>"menu_#{self.controller.controller_name}_#{list[:name]}_actions"}
        - for action in list[:list]
          =li_link_to t("views.#{self.controller.controller_name}.index.#{action[:name].to_s}"), action[:url]||{:action=>action[:name]}
