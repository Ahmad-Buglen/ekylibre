-unless @current_company.stocks.size.zero?
  =kujaku do |k|
    -k.criterion do
      %label=tc('select_warehouse')
      =select_tag(:warehouse_id, options_for_select([[]]+@current_company.warehouses.collect{|x| [x.name, x.id]}, params[:warehouse_id]))

  =toolbar do |t|
    -t.print_stocks Date.today.to_s, :action=>:index, :controller=>:stocks
=list
