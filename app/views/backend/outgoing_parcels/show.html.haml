- main_toolbar do |t|
  - t.edit resource if resource.updateable?
  - t.destroy(resource, method: :delete, "data-confirm" => :are_you_sure_you_want_to_delete.tl) if resource.destroyable?

= cobbles do |c|
  - c.cobble :general_informations do
    = attributes_list do |l|
      - l.attribute :number
      - l.attribute :reference_number
      - l.attribute :mode
      - l.attribute :net_mass
      - l.attribute :sale, url: true
      - l.attribute :address
      - l.attribute :transporter, url: true
      - l.attribute :transport, url: true
      - if resource.custom_fields.any?
        - l.custom_fields

  - c.cobble :items, title: OutgoingParcel.human_attribute_name(:items) do
    = cobble_list :items
