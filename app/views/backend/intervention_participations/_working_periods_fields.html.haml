- unless f.object.hide?

  .participation
    = hidden_field_tag 'working_period_id', f.object.id

    .participation-icon
      .picto.picto-timelapse
      = f.object.nature.l  

    .participation-form
      .participation-field
        = text_field_tag "intervention_participation[working_periods_attributes][#{f.index}][hours]", f.object.hour_gap, class: "participation-input"
        %span{class: "participation-field-label"} H

      .participation-field
        = text_field_tag "intervention_participation[working_periods_attributes][#{f.index}][minutes]", f.object.min_gap, class: "participation-input"
        %span Min

    .participatimn-result
      %span= f.object.started_at.l(format: :full)
      %span &#8594;
      %span= f.object.stopped_at.l(format: :full)
