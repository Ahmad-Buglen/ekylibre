=main_toolbar do |t|
  -t.edit @plant_medicine

=beehive do |b|
  -b.cell do
    = attributes_list do |l|
      - l.attribute :name
      - l.attribute :nature
      - l.attribute :variant

  - b.tabbox do
    - b.cell(:interventions) do
      = toolbar do |t|
        - t.new(:params =>{:controller => :interventions})
      = list(:intervention_casts)
    - b.cell(tl(:x_indicators, :count => @plant_medicine.readings.count)) do
      = list(:indicators)