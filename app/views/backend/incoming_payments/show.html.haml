= main_toolbar do |t|
  - t.edit @incoming_payment

= beehive do |b|
  - b.cell do
    = attributes_list do |l|
      - l.attribute :number
      - l.attribute :amount, currency: true
      - l.attribute :payer, :label=>:full_name, url: true
      - l.attribute :responsible, :label=>:label
      - l.attribute :deposit, url: true
      - l.attribute :mode
      - l.attribute :commission_amount
      - l.attribute :commission_account, url: true
      - l.attribute :paid_at
      - l.attribute :to_bank_at
      - l.attribute :received
      - l.attribute :scheduled
      - l.attribute :bank_name
      - l.attribute :bank_account_number
      - l.attribute :bank_check_number
      - l.attribute :journal_entry, url: true

  - b.cell tc(:affair) do
    = affair_of(@incoming_payment)

    