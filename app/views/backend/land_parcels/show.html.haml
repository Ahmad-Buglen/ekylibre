= main_toolbar do |t|
  - t.edit resource

= beehive do |b|
  - b.hbox do
    - b.cell :general do
      = mini_map(resource)
      .info
        %span.title= LandParcel.human_attribute_name(:net_surface_area)
        %span.value= resource.net_surface_area.in_hectare.round(2).l
    - b.cell :last_analyses, params: {nature: :soil_analysis, product_id: resource.id}