= main_toolbar do |t|
  - t.edit resource

= beehive do |b|
  - b.hbox do
    - b.cell :general do
      = map(resource, class: "picture mini-map")
      .info
        %span.title= LandParcel.human_attribute_name(:net_surface_area)
        %span.value= resource.net_surface_area.in_hectare.round(2).l

  - b.hbox do
    - b.cell do
      = attributes_list do |l|
        - l.attribute :name
