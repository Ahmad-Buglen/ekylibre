:ruby
  item = row_form||{}
  @@item_count = 0 if !defined?(@@item_count)
  id = 'e'+@@item_count.to_s(36)
  @@item_count += 1
- if item.errors.any?
  %tr.inline-errors{id: id+'-errors'}
    %td{colspan: 5}= error_messages(item)
%tr{id: id}
  %td= text_field_tag("items[#{id}][name]", item.name, id: "items_#{id}_name", data: {parameter_name: "name", autofocus: (controller_name.to_s == "journal_entries" ? "false" : "true")})
  %td= selector_tag "items[#{id}][account_id]", {controller: :accounts, action: :unroll}, value: item.account
  %td.dec= text_field_tag "items[#{id}][real_debit]", (item.real_debit||0.0), size: 10, id: "items_#{id}_real_debit", class: "original-debit", href: url_for(controller: :journal_entry_items, action: :new), data: {update: "#items", update_at: :bottom, type: :html, add_item_unless: "#total", with: "#items_#{id}_name,#entry-original-debit,#entry-original-credit,input[name='journal_entry[journal_id]'],input[name='journal_entry[printed_on]']", exclusive_nullify: "#items_#{id}_real_credit"}
  %td= @journal.currency
  %td.dec= text_field_tag "items[#{id}][real_credit]", (item.real_credit||0.0), size: 10, id: "items_#{id}_real_credit", class: "original-credit", href: url_for(controller: :journal_entry_items, action: :new), data: {update: "#items", update_at: :bottom, type: :html, add_item_unless: "#total", with: "#items_#{id}_name,#entry-original-debit,#entry-original-credit,input[name='journal_entry[journal_id]'],input[name='journal_entry[printed_on]']", exclusive_nullify: "#items_#{id}_real_debit"}
  %td= @journal.currency
  %td.act= link_to(:destroy.tl, "#", data: {remove: "##{id}, ##{id}-errors"}, class: "destroy")
- if @financial_year and @journal and @journal.currency != @financial_year.currency
  %tr
    %td.dec{colspan: 2}
    %td.dec.debit{data: {use: "#items_#{id}_real_debit,#journal_entry_real_currency_rate", calculate: "mul"}}
    %td= @financial_year.currency
    %td.dec.credit{data: {use: "#items_#{id}_real_credit,#journal_entry_real_currency_rate", calculate: "mul"}}
    %td= @financial_year.currency
    %td.act
