= cobbles do |c|
  - c.cobble :general_informations do
    = attributes_list do |l|
      - l.attribute :entity, url: true
      - l.attribute :direction
      - l.attribute :entity_role
      - l.attribute :amount, currency: true
      - l.attribute :affair, url: true
      - l.attribute :journal_entry, url: true
      - if resource.custom_fields.any?
        - l.custom_fields

  - c.cobble :items do
    = cobble_list :items
