- unless @title.empty?
  = render 'help', locals: { title: @title, fy_to_close: @fy_to_close, fy_to_open: @fy_to_open }

- main_toolbar do |t|
  = t.new params: { redirect: nil }, icon: false, label: :open_financial_year.tl(code: @fy_to_open.code), class: 'btn-new-financial-year'
  - year = @fy_to_close
  = t.close year, label: :close_financial_year.tl(code: year.name), icon: false, disabled: @fy_to_close.present? if @fy_to_close
  = t.lock year, label: :lock_financial_year.tl(code: year.name), icon: false, disabled: @fy_to_close.present? if @fy_to_close

= main_list
