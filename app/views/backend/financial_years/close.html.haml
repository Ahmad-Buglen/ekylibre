= form_tag do
  = field_set do
    = field FinancialYear.model_name.human, @financial_year.code
    = field FinancialYear.human_attribute_name(:stopped_on), @financial_year.stopped_on.l
    = hidden_field_tag("financial_year[stopped_on]", @financial_year.stopped_on)
    = field :select_forward_journal.tl, select_tag("journal_id", options_for_select([[:dont_use_journal.tl, ""], [:create_journal.tl, 0]] + Journal.all.collect{|j| [j.name, j.id]}, :selected => params[:journal_id]))
  = form_actions do
    = submit_tag(:close_financial_year.tl, "data-confirm" => :are_you_sure.tl, class: "primary")
    = link_to(:cancel.tl, (params[:redirect] || {action: :index}), class: "btn")
