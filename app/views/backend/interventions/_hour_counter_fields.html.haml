= f.input :indicator_name, as: :hidden, input_html: { value: :hour_counter }
= f.input :measure_value, label: :hour_counter.tl, wrapper: :append do
  = f.input_field :measure_value_value, as: :string
  = f.input_field :measure_value_unit, collection: [:hour], selected: :hour, as: :hidden
  %span.add-on= :hours_label.tl