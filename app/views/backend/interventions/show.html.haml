= main_toolbar do |t|
  - t.edit @intervention
  - if @intervention.runnable?
    - t.run @intervention, method: :post, confirm: true

= beehive do |b|
  - b.tabbox do
    - b.cell do
      = attributes_list(@intervention) do |l|
        - l.attribute :name
        - l.attribute :started_at
        - l.attribute :stopped_at
        - l.attribute :state
        - l.attribute :production, url: true
        - if @intervention.production_support
          - l.attribute :storage, url: true

  - b.tabbox do
    - b.cell(:casts) do
      = list(:casts)
    - b.cell(:operations) do
      = list(:operations)