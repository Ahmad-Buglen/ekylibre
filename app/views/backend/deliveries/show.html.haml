- main_toolbar do |t|
  - t.export :transport, resource
  - t.edit resource
  - t.destroy(resource, method: :delete, "data-confirm" => :are_you_sure_you_want_to_delete.tl) if resource.destroyable?

= main_state_bar(resource)

= main_informations do
  = attributes_list do |l|
    - l.attribute :number
    - l.attribute :mode
    - l.attribute :driver, url: true
    - l.attribute :transporter, url: true
    - l.attribute :reference_number
    - l.attribute :started_at
    -# l.attribute :net_mass
    - l.attribute :responsible, url: true
    - l.attribute :annotation

= cobbles do |c|
  - c.cobble :parcels do
    = cobble_list :parcels
