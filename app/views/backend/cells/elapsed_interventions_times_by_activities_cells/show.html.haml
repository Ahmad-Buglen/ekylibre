        sums = operations.sums_of_periods.sort.inject({}) do |hash, pair|
          hash[pair.expr.to_i.to_s] = pair.sum.in_second.convert(:hour).round(2).to_s.to_f
          hash
        end
        series << { name: activity.name, data: normalize_serie(sums, categories.keys)}
      end
    end

