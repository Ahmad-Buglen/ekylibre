= main_toolbar do |t|
  - t.edit @plant
  - t.destroy(@plant, method: :delete, "data-confirm" => tg(:are_you_sure_you_want_to_delete))

= beehive do |b|
  - b.cell :details do
    .picture
      - if @plant.picture.exists?
        = image_tag(@plant.picture.url(:identity))
      - else
        = @plant.shape_svg(width: 180, height: 180, :class => :map)
    .info
      %span.title= Plant.human_attribute_name(:net_surface_area)
      %span.value= @plant.net_surface_area.in_hectare.round(2).l
    = attributes_list do |l| # liste des champs à afficher
      - l.attribute :name
      - l.attribute :born_at
      - #- l.attribute :variety, url: true
      - #- l.attribute :group, url: true # on affiche l'attribut name de l'entité ProductGroup associé par l'attribut group de l'entité courante Product avec un lien vers ce groupe
      - l.attribute :description

  - b.tabbox do
    - b.cell(:intervention_casts) do
      = list(:intervention_casts)
    - b.cell(:issues) do
      = toolbar do |t|
        - t.new(params: {controller: :issues, :target_id => @plant.id, :target_type => @plant.class.name})
      = list(:issues)
    - b.cell(tl(:x_readings, count: @plant.readings.count)) do
      = list(:readings)
    - b.cell(:reading_tasks) do
      = list(:reading_tasks)
    - b.cell(:places) do
      = list(:places)

