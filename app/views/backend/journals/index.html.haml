- main_toolbar do |t|
  = t.new params: { redirect: nil }
  = t.bookkeep
  = link_to t("labels.consult_the_day_book", count: @draft_entries_count), { controller: :draft_journals, action: :show, redirection: backend_journals_path }, { class: [('btn btn-default no-icn'),('disabled' if @draft_entries_count < 1)] }
  - unless @unbalanced_entries_count < 1
    = link_to t("labels.consult_unbalanced_entries", count: @unbalanced_entries_count), { controller: :invalid_journal_entries, action: :index }, { class: 'btn btn-default no-icn' }

= main_list
