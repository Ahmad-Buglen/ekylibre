=field_set do
  =f.input :name
  =f.input :currency, :source => :currencies
  =f.input :nature, :show => {:bank_account => :bank_account_options}

=field_set(:bank_account, :in => :bank_account_options) do
  =f.input :bank_name
  =f.input :bank_address, :field => :text
  =f.input :mode, :show => {}

=field_set(:bban, :in => :bank_account_options) do
  =f.input :country, :field => :hidden
  =f.input :bank_code
  =f.input :bank_agency_code
  =f.input :bank_account_number
  =f.input :bank_account_key

=field_set(:iban, :in => :bank_account_options) do
  =f.input :iban
  =f.input :bic

=field_set(:accountancy) do
  =f.association :account, :source => {{:nature => :bank_account} => :banks, {:nature => :cash_box} => :cashes}, :new => {:number => Account.chart_number(:banks)}
  =f.association :journal, :source => {{:nature => :bank_account} => :banks, {:nature => :cash_box} => :cashes}, :new => {:nature => :bank}
