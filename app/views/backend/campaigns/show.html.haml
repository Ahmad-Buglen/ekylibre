- main_toolbar do |t|
  - t.edit resource

= beehive do |b|
  - b.cell do
    = attributes_list do |l|
      - l.attribute :name
      - l.attribute :harvest_year
      - l.attribute :closed
      - l.attribute :number
      - l.attribute :description

  - b.hbox do
    - b.cell(:productions) do
      = toolbar do |t|
        - t.new variants: Activity.availables.reorder(:name).to_a.inject({}){|h,n| h[:new_production_of_activity.tl(activity: n.name)] = {activity_id: n.id, controller: :productions, campaign_id: resource.id}; h}
      = list(:productions)

  - b.cell :map, params: {campaign_ids: resource.id}
