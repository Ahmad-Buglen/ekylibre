- main_toolbar do |t|
  = t.edit resource if resource.updateable? && resource.journal_entry.bank_statement_number.blank?
  = t.destroy resource if resource.destroyable? && resource.journal_entry.bank_statement_number.blank?

= main_informations attachment: true do
  = attributes_list do |l|
    - l.attribute :number
    - l.attribute :amount
    - l.attribute :payee, label: :full_name, url: true
    - l.attribute :responsible, label: :label
    - l.attribute :mode
    - l.attribute :paid_at
    - l.attribute :to_bank_at
    - l.attribute :bank_check_number
    - l.attribute :journal_entry, url: true
    - l.attribute :list, url: true, if: list

= cobbles do |c|
  - c.cobble :affair do
    = affair_of(resource, default: 'Purchase')
