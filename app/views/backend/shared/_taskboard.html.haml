= content_tag(:div, nil, { :class => "taskboard #{taskboard.options[:class]}", :id => "#{taskboard.options[:id]}" }) do

  - if taskboard.columns.any?

    - taskboard.columns.each_with_index do |column, index|

      = content_tag(:div, nil, :class => "taskboard-column #{column.options[:class]}", :data => { :column_index => index }) do

        = content_tag(:div, nil, :class => "taskboard-header #{column.column_header.options[:class]}") do
          = content_tag(:h4, column.column_header.title, :class => "title")
          = content_tag(:div, nil, :class => "actions") do
            - column.column_header.actions.each do |action|
              = action

        - if column.tasks.any?

          = content_tag(:div, nil, :class => "tasks", :data => {:column_index => index}) do

            - if column.tasks.any?
              - column.tasks.each do |task|

                = content_tag(:div, nil, :class => "task #{task.options[:class]}", :data => task.options[:data]) do

                  - if task.can_select?
                    %div.task-select-field
                      = check_box_tag(:check_nature,'1', false)

                  - if task.colors.any?
                    %div.task-colors
                      - task.colors.each do |color|
                        %div.task-color{style: "background-color: #{color};"}

                  - if task.titles.any?
                    %div.task-texts
                      - task.titles.each do |title|
                        = content_tag(:span, title[:text], :class => "task-text #{title[:class]}")
                        = content_tag(:i, nil, :class => "picto picto-#{title[:icon]} #{title[:icon_class]}") unless title[:icon].nil?

                  - if task.datas.any?
                    = content_tag(:div, nil, :class => "task-datas") do
                      - task.datas.each do |data|
                        = content_tag(:div, nil, :class => "task-data #{data[:class]}", style: data[:style]) do
                          = content_tag(:i, nil, :class => "picto picto-#{data[:icon]} #{data[:icon_class]}")
                          = content_tag(:span, data[:text], :class => "data-text #{data[:text_class]}")

                  - if task.actions.any?
                    %div.task-actions
                      - task.actions.each do |action|
                        = action
