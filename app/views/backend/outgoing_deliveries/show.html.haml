=sale_steps(@outgoing_delivery.sale)

=main_toolbar do |t|
  -t.edit @outgoing_delivery if @outgoing_delivery.updateable?

=attributes_list(@outgoing_delivery) do |l|
  -l.attribute :number
  -l.attribute :reference_number
  -l.attribute :mode
  -l.attribute :weight
  -l.attribute :pretax_amount
  -l.attribute :amount
  -l.attribute :sale, :url => true
  -l.attribute :address
  -l.attribute :planned_on
  -l.attribute :moved_on
  -l.attribute :transporter, :url => true
  -l.attribute :transport, :url => true
  -l.attribute :description

%h2=OutgoingDelivery.human_attribute_name(:items)
=list :items
