= field_set do
  = f.input :nature, as: :radio_buttons, collection: [[:general.tl,'general'], [:auxiliary.tl,'auxiliary']], show: '.{{value}}-nature-options'
  .general-nature-options.centralizing-nature-options
    = f.input :number
  .auxiliary-nature-options
    = f.input :centralizing_account, collection: Nomen::Account.select { |a| a.centralizing }, required: true, value_method: lambda {|a| a.name}, label_method: lambda {|a| a.send(Account.accounting_system)+ " - " + a.name.tl}
    = f.input :auxiliary_number, required: true
  = f.input :name
  = f.input :description, as: :text
  = f.input :usages, collection: Nomen::Account.selection
  = f.custom_fields
