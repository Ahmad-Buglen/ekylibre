=main_toolbar do |t|
  -t.edit @land_parcel_cluster

=beehive do |b|
  -b.tabbox do
    -b.cell :general do
      .picture
        =@land_parcel_cluster.shape_svg(:width => 180, :height => 180, :class => :map)
      .info
        %span.title=LandParcelCluster.human_attribute_name(:net_surface_area)
        %span.value=@land_parcel_cluster.net_surface_area.in_hectare.round(2).l

=beehive do |b|
  -b.cell do
    = attributes_list do |l|
      - l.attribute :name