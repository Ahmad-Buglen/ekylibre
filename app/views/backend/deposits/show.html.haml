=main_toolbar do |t|
  -t.edit @deposit
  -t.print_deposit @deposit

=attributes_list(@deposit) do |l|
  -l.attribute :number
  -l.attribute :cash, :url=>true
  -l.attribute :mode # , :url=>true
  -l.attribute :payments_count
  -l.attribute :responsible
  -l.attribute :description
  -l.attribute :journal_entry, :url=>true

%h2=Deposit.human_attribute_name("payments")
=list :payments

%table.list
  %tr.total
    %th=tc(:payments_count, :mode=>@deposit.mode.name)
    %td=@deposit.payments_count
  %tr.total.important
    %th=tc(:total)
    %td=number_to_money(@deposit.amount, @deposit.cash.currency)
