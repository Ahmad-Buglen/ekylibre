= main_toolbar do |t|
  - t.edit @incident
  - if @incident.can_solve?
    - t.solve @incident, :method => :post, "data-confirm" => tc(:are_you_sure_you_want_to_solve_incident)
  - if @incident.can_drop?
    - t.drop @incident, :method => :post, "data-confirm" => tc(:are_you_sure_you_want_to_drop_incident)
  - if @incident.can_reopen?
    - t.reopen @incident, :method => :post, "data-confirm" => tc(:are_you_sure_you_want_to_reopen_incident)
  - t.destroy(@incident, :method=>:delete, "data-confirm" => tg(:are_you_sure_you_want_to_delete)) if @incident.destroyable?

= beehive do |b|
  - b.hbox do
    - b.cell do
      = attributes_list do |l|
        - l.attribute :name
        - l.attribute :target, url: true
        - l.attribute :description
    - if @incident.picture.exists?
      - b.cell do
        .picture= image_tag(@incident.picture.url(:identity))

  - b.tabbox do
    - b.cell(:interventions) do
      = toolbar do |t|
        - t.new(:params => {:controller => :interventions, :incident_id => @incident.id})
      = list(:interventions)