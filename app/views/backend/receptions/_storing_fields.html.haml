- item_storing ||= f.object
- variant = Maybe(item_storing.parcel_item.variant)

.nested-fields.item-storing-fields
  .item-storing-quantifier
    = f.input :quantity, wrapper: :append do 
      = f.input_field :quantity, class: 'item-storing-quantity', placeholder: '0'
      %span.add-on.item-population-unit-name
        = variant.unit_name.or_else('#')
  = f.referenced_association :storage, source: :storage
  .act
    - if f.object.destroyable?
      = link_to_remove_association(content_tag(:i) + h(:destroy.tl), f, 'data-no-turbolink' => true, class: 'destroy remove remove-item')