= cobbles do |c|
  - c.cobble :general_informations do
    = attributes_list do |l|
      - l.attribute :number
      - l.attribute :third, url: true
      - l.attribute :debit, currency: true
      - l.attribute :credit, currency: true
      - l.attribute :journal_entry, url: true
      - l.custom_fields

  - c.cobble :deals do
    = affair_deals(resource)
