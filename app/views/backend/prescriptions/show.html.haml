- main_toolbar do |t|
  - t.edit @prescription

= beehive do |b|
  - b.hbox do
    - b.cell do
      = attributes_list do |l|
        - l.attribute :reference_number
        - l.attribute :delivered_at
        - l.attribute :prescriptor, url: true
        - l.attribute :description
        - if resource.custom_fields.any?
          - l.custom_fields

    - b.cell :attachments, title: Prescription.human_attribute_name(:attachments) do
      = attachments_of(resource)

  - b.hbox do
    - b.cell(:interventions) do
      = list(:interventions)

