- main_toolbar do |t|
  - t.export :transport, resource
  - t.edit resource

= cobbles do |c|
  - c.cobble :general_informations do
    = attributes_list do |l|
      - l.attribute :number
      - l.attribute :transporter, url: true
      - l.attribute :reference_number
      - l.attribute :departed_at
      - l.attribute :net_mass
      - l.attribute :responsible, url: true
      - l.attribute :annotation
      - if resource.custom_fields.any?
        - l.custom_fields

  - c.cobble :deliveries do
    = list :deliveries
