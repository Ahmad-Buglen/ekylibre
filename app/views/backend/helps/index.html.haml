=kujaku

=subheading(:x_results, :count => @search[:count], :here => true) if @search

=search_results(@search) do |result|
  %h3
    =link_to(result["title"].html_safe, "#", 'data-toggle' => 'result')
    %small=result["pertinence"]
  .content.collapsed=help(result["file"])

-#%table.full-width
  %tr
    -if @results
      %td.results{:valign=>:top}
        -if @results.size>0
          %ul
            -for r in @results[0..@per_page-1]
              %li=render 'result', :result => r
          -if @results.size>@per_page
            =link_to(tc(:other_results), "#", "data-toggle-visibility" => "#other-results", :class=>"icon im-more")
            %ul#other-results{:style=>'display:none'}
              -for r in @results[@per_page..-1]
                %li=render 'result', :result => r
    %td#helpage{:valign=>:top}
