= field_set do
  = f.input :name
  = f.input :nature, as: :radio_buttons, show: ".{{value}}_options"
  - unless f.object.productions.any?
    = f.input :family, collection: Nomen::ActivityFamilies.selection, input_html: {data: {activity_family: true}}
    - family = Nomen::ActivityFamilies[f.object.family]
    = f.input :with_cultivation, as: :hidden
    = f.input :cultivation_variety, collection: ((family and family.cultivation_variety) ? Nomen::Varieties.selection(family.cultivation_variety) : []), wrapper_html: {style: "display: #{(family and family.cultivation_variety) ? 'block' : 'none'}"}
    = f.input :with_supports, as: :hidden
    = f.input :support_variety, collection: ((family and family.support_variety) ? Nomen::Varieties.selection(family.support_variety) : []), wrapper_html: {style: "display: #{(family and family.support_variety) ? 'block' : 'none'}"}
  = f.input :description
  = f.custom_fields

.auxiliary_options
  = field_set(Activity.human_attribute_name(:distributions)) do
    = f.nested_association(:distributions)

