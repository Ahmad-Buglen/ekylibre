= grid(@crops) do |g|
  - g.column name: :plant.tl do |crop|
    - link_to(crop.name, backend_product_path(crop))


  - g.column name: :last_inspection.tl do |crop|
    - if crop.last_inspection.nil?
      - crop.last_inspection_number
    - else
      - link_to(crop.last_inspection_number, backend_inspection_path(crop.last_inspection))


  - g.column name: :forecast_harvest_week.tl do |crop|
    - crop.last_inspection_forecast_harvest_week


  - g.column name: :harvested_area.tl do |crop|
    - crop.human_harvested_area


  - g.column name: :available_area.tl do |crop|
    - crop.human_available_area


  -# g.column name: 'Volume net disponible' do |crop|
    -# items_count_unit = crop.last_inspection.user_per_area_unit(:items_count)
    -# net_mass_unit = crop.last_inspection.user_per_area_unit(:net_mass)

    -# content_tag(:div, nil) do
      %p= crop.human_net_volume_available(:items_count, items_count_unit)
      %p= crop.human_net_volume_available(:net_mass, net_mass_unit)


  - g.column name: :disease_percentage.tl do |crop|
    - crop.last_inspection_disease_percentage(current_user)


  - g.column name: :deformity_percentage.tl do |crop|
    - crop.last_inspection_deformity_percentage(current_user)


  - g.column name: :comment.tl do |crop|
    - crop.last_inspection_comment