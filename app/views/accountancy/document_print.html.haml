=form_tag({:controller=>:company, :action=>:print}) do
  %fieldset
    %legend=tc(:print)
    =formalize do |f|
      -f.title DocumentTemplate.model_name.human
      -f.field DocumentTemplate.model_name.human, select_tag("id", options_for_select(@document_templates.collect{|d| [d.name, d.code]}, params[:code]), :id=>"template_code")
    #document_options=render(:partial=>'document_options')
    .actions=submit_tag tg(:print), :name=>nil
=observe_field "template_code", :update=>:document_options, :url=>{:action=>:document_print}, :with=>"code"

=form_tag do
  %fieldset
    %legend=tc(:exportation)
    =formalize do |f|
      -f.title tc(:accounting_balance)
      -f.field tg(:from), date_field_tag("started_on", @current_company.current_financial_year.started_on)
      -f.field tg(:to),   date_field_tag("stopped_on", @current_company.current_financial_year.stopped_on)
    .actions=submit_tag tg(:export), :name=>:export
=observe_field "template_code", :update=>:document_options, :url=>{:action=>:document_print}, :with=>"code"




