-journals = @current_company.journals
.tabbox.journals
  .tabs
    -if @current_company.journal_entries.find_by_draft(true)
      -name=tc('draft_entries').gsub(/\s+/, '&nbsp;').html_safe
      -if action_name=="draft_entries"
        %strong.tab.current.special=name
      -else
        =link_to(name, {:action=>:draft_entries, :controller=>:accountancy, :mode=>params[:mode], :period=>params[:period], :start=>params[:start], :finish=>params[:finish]}, :class=>"tab special")
    -for journal in journals
      -name= journal.name.gsub(/\s+/, '&nbsp;').html_safe
      -klass = "tab"
      -klass += " current" if (action_name=="journal" and journal.id==@journal.id) or (@journal_record and @journal_record.journal_id==journal.id)
      =link_to(name, {:action=>:journal, :controller=>:accountancy, :id=>journal.id, :mode=>params[:mode], :period=>params[:period], :start=>params[:start], :finish=>params[:finish]}, :title=>journal.name, :class=>klass)
