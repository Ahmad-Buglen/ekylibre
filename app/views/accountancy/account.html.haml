=toolbar do |t|
  -t.link :account_update, :id=>@account.id
  -if @account.letterable?
    -t.link :account_letter, :id=>@account.id
%table.flex
  %tr
    %td
      =evalue @account, :number
      =evalue @account, :name
      =evalue @account, :comment
    %td
      %table.dyta
        %tr.total
          %th
          %th=JournalRecord.human_attribute_name("debit")
          %th=JournalRecord.human_attribute_name("credit")
        %tr.total
          %th=tc(:totals)
          %td.value=number_to_accountancy(@totals[:debit])
          %td.value=number_to_accountancy(@totals[:credit])
        %tr.total
          %th=tc(:balance)
          %td.value=number_to_accountancy(@totals[:balance_debit])
          %td.value=number_to_accountancy(@totals[:balance_credit])



=tabbox(:account) do |tb|
  -tb.tab(:journal_entries, :content=>dyta(:account_journal_entries))
  -tb.tab(:entities, :content=>dyta(:account_entities))
  -#tb.tab(:children, :content=>dyta(:account_children))
