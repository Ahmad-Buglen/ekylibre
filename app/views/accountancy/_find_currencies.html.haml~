= link_to_function "fermer" do |p| 
  - p.replace_html 'currency', '' 
  - p['bank_account_currency_id'].focus()
- if @find_currencies.size > 0
  %table{:border=>1} 
    %tr
      %td.label=lc :currency_id
      %td.label=lc :currency_name
      %td.label=lc :currency_code
      %td.label=lc :currency_rate
    - @find_currencies.each do |currency|
      %tr
        %td=currency.id
        %td 
          = link_to_function(currency.name) do |p| 
            - p['bank_account_currency_id'].value =  currency.id  
            - p['bank_account_journal_id'].focus()
            - p.replace_html 'currency', ''
        %td=currency.code
        %td=currency.rate
- else
  %p=lc :erreur
