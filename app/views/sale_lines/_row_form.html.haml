%fieldset.quick-add
  %legend=tc :add_quickly_a_line
  =form_tag(:controller=>:sale_lines, :action=>:create, :sale_id => @sale.id) do 
    %table.quick
      %tr
        %td=SaleLine.human_attribute_name("product")
        %td#detail-row{:rowspan=>2, "data-refresh"=>url_for(:controller=>:sale_lines, :action=>:detail, :sale_id=>@sale.id, :mode=>:row), "data-refresh-mode"=>"update"}=render :partial=>"sale_lines/detail_row_form"
        %td{:rowspan=>2}=submit_tag(tg(:add))
      %tr
        %td=combo_box_tag("sale_line[price_id]", :available_prices, {:controller=>:interfacers}, "data-dependents"=>"#detail-row", "data-parameter-name"=>"price_id")
