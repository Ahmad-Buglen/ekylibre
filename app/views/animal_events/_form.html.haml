=field_set do
  -input :name
  -association :nature, :as => :radio_buttons
  -association :parent

-field_set(:animal) do |f|
  -association :animal, :source => :here

-field_set(:delay) do |f|
  -input :planned_at
  -input :moved_at

-field_set(:care) do |f|
  =nested_association(:diagnostics) do
    -input :symptoms
    -input :corpse_location
    -association :disease

-field_set(:treatment) do |f|
  =nested_association(:treatments) do
    -input :started_at
    -association :drug
    -input :quantity
    -input :quantity_interval
    -input :quantity_delay
    -association :prescription

-field_set(:entity) do |f|
  -association :watcher, :include_blank => true, :default_value => :blank
