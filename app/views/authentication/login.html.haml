-register = !defined?(Ekylibre::DONT_REGISTER)
-download_firefox = !request.env["HTTP_USER_AGENT"].to_s.match(/mozilla/i)
-if request.env["HTTP_USER_AGENT"].to_s.match(/MSIE (\d+\.\d+);/)
  -bad_browser = ($1.to_f <= 6)
#login.login{:style=>"display:none"}
  .logoban{:title=>Ekylibre.version}
  =form_tag({:company=>params[:company], :url=>params[:url]}) do
    %table
      -if @current_company or @users
        %tr
          %td.label=Company.model_name.human
          %td.value
            -if @users
              =select_tag("company", options_for_select(@users.collect{|x| [x.company.name, x.company.code]}))
            -else
              =link_to(@current_company.name, {:action=>:login, :company=>nil})
      -if ::I18n.active_locales.size > 1
        %tr
          %td.label=tc(:locale)
          %td.value=locale_selector
      %tr
        %td.label=tc :username
        %td.input=text_field_tag :name, params[:name], :tabindex=>1
      %tr
        %td.label=tc :password
        %td.input=password_field_tag :password, nil, :tabindex=>2
      %tr
        %td.button{:colspan=>2}=submit_tag(tc(:connect), :tabindex=>3)
  -if register or download_firefox
    .actions
      =link_to(t("actions.authentication.register"), {:action=>:register, :locale=>params[:locale]}, :class=>"icon im-register", :tabindex=>4) if register
      =link_to(tc(:download_firefox), "http://www.mozilla.com/", :class=>"icon im-firefox") if download_firefox
-if bad_browser
  #bad_browser.login
    .logoban
    %h2=tc("bad_browser.title")
    %p=tc("bad_browser.explanation")
    %p=tc("bad_browser.proposal")
    %table.browsers.actions
      %tr
        %td=link_to(tc("bad_browser.wb.firefox"), "http://www.mozilla.com/")
        %td=link_to(tc("bad_browser.wb.chrome"), "http://www.google.com/chrome")
        %td=link_to(tc("bad_browser.wb.safari"), "http://www.apple.com/fr/safari/")
        %td=link_to(tc("bad_browser.wb.opera"), "http://www.opera.com/browser/")
        %td=link_to(tc("bad_browser.wb.ie"), "http://www.microsoft.com/france/windows/ie/")
-else
  #nojavascript.login
    .logoban
    %p.message=tc('no_javascript')
  :javascript
    window.$('nojavascript').hide();
    window.$('login').show();

:javascript
  window.$('name').select();
  window.$('name').focus(); 
