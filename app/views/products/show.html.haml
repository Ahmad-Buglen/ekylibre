=toolbar do |t|
  -t.edit @product

=beehive do |b|
  -b.cell :details do
    =attributes_list(@product) do |l|
      -l.attribute :name
      -l.attribute :price
      -l.attribute :code
      -l.attribute :code2
      -l.attribute :ean13
      -l.attribute :category, :url=>true
      -l.attribute :unit, :label=>:label
      -l.attribute :weight
      -l.attribute :active
      -l.attribute :to
      -l.attribute :catalog_name
      -l.attribute :catalog_description
      -l.attribute :description
      -l.attribute :comment
      -l.attribute :stockable

  -b.tabbox do
    -b.cell :prices do
      =toolbar do |t|
        -t.link(:new_sales_price, {:controller=>:prices, :action=>:new, :mode=>:sales, :product_id=>session[:product_id]}) if @product.for_sales
        -t.link(:new_purchase_price, {:controller=>:prices, :action=>:new, :mode=>:purchases, :product_id=>session[:product_id]}) if @product.for_purchases
      =list :prices

    -b.cell :components do
      =toolbar do |t|
        -t.link :new, :controller=>:product_components, :product_id=>@product.id
      =list :components

    -b.cell :stocks do
      =toolbar do |t|
        -t.link :new, :controller=>:stocks, :product_id=>@product.id
      =list(:stocks)

    -b.cell :stock_moves do
      =list(:stock_moves)
