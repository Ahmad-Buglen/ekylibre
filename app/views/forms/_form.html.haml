=form_tag({:action => action}, form_options.merge(params[:dialog] ? {"data-dialog" => params[:dialog]} : {})) do
  -# if form_options[:method] != :post
    =hidden_field_tag(:_method, form_options[:method])
  -#=@product_nature.errors.inspect
  -if params[:redirect]
    =hidden_field_tag(:redirect, params[:redirect]) # || back_url
  .form-fields=fields
  =form_actions do
    =submit_tag(options[:submit]||tl(action), "data-disable-with" => tl(:please_wait))
    =link_to(options[:cancel]||tl(:cancel), :back, (params[:dialog] ? {"data-close-dialog" => params[:dialog]} : {}))
