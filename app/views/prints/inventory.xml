<?xml version="1.0"?>
<template title="Example" lang="fr" version="2.0">
  <infos>
    <info name="authors">Thibaud Mérigon, Brice Texier</info>
  </infos>
  <parameters>
    <parameter name="inventory" nature="inventory">Inventaire</parameter>
  </parameters>
  <document unit="mm" size="10" title="employee.label">
    <page orientation="portrait" format="A4" margin="10mm">
      
      <part height="40mm">
	<set>
	  <text value="Inventaire du {{inventory.date}} effectué par {{inventory.employee.label}}" left="50%" align="center" bold="true"/>
	</set>
      </part>
      
      <table collection="inventory.lines" fixed="true">
	<column label="Lieu de stockage" property="location/name" width="40mm"/>
	<column label="Produit" property="product/name" width="60mm"/>
	<column label="Catégorie" property="product/shelf_name" width="30mm"/>
	<column label="Quantité théorique" property="theoric_quantity"  width="30mm"/>
	<column label="Quantité constatée" property="validated_quantity" width="30mm"/>
      </table>
    </page>
  </document>
</template>
