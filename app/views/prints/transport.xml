<?xml version="1.0"?>
<template title="Example" lang="fr" version="2.0">
  <infos>
    <info name="authors">Thibaud MÃ©rigon, Brice Texier</info>
  </infos>
  <parameters>
    <parameter name="transport" nature="transport">Transport</parameter>
  </parameters>
  <document unit="mm" size="10" title="bla">
    <page orientation="portrait" format="A4" margin="10mm">
      
      <iteration variable="delivery" collection="transport.deliveries">
	<part height="60mm">
	  <set>
	    <text value="{{delivery.contact/address}}"/>
	    <text value="{{delivery.order.client.contact/address}}" left="60mm"/>
	    <text value=" Transporteur : {{transport.transporter/address}}"  left="120mm"/>
	    <text value="Poids : {{delivery.weight}}"/>
	  </set>
	</part>
      </iteration>
      
    </page>
  </document>
</template>
