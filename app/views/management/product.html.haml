=toolbar do
  -link :product_update, :id=>@product.id

=attributes_list(@product) do |l|
  -l.attribute :name
  -l.attribute :price
  -l.attribute :code
  -l.attribute :code2
  -l.attribute :ean13
  -l.attribute :category, :url=>{:action=>:product_category}
  -l.attribute :unit, :label=>:label
  -l.attribute :weight
  -l.attribute :active
  -l.attribute :to
  -l.attribute :catalog_name
  -l.attribute :catalog_description
  -l.attribute :description
  -l.attribute :comment
  -l.attribute :manage_stocks

=tabbox(:product) do |tb|
  -tb.tab :prices
  -tb.tab :components 
  -tb.tab :stocks, :content=>kame(:product_stocks)
  -tb.tab :stock_moves, :content=>kame(:product_stock_moves)
