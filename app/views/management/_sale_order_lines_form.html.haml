= formalize do |f|
  - f.error :sale_order_line
  - f.field :sale_order_line, :product_id, :choices=>@current_company.available_products.collect{|x| [x.name, x.id]}, :new=>{:action=>:products_create}
  - f.field :sale_order_line, :price_list_id, :choices=>@current_company.price_lists.collect{|x| [x.name, x.id]}
  - f.field :sale_order_line, :quantity
