=toolbar do |t|
  -t.update @deposit
  -t.print :deposit, :p0=>@deposit.id

=attributes_list(@deposit) do |l|
  -l.attribute :number
  -l.attribute :cash, :url=>{:controller=>:accountancy, :action=>:cash}
  -l.attribute :payments_count
  -l.attribute :responsible
  -l.attribute :comment
  -l.attribute :journal_entry, :url=>{:controller=>:accountancy, :action=>:journal_entry}

%h2=Deposit.human_attribute_name("payments")
=kame :deposit_payments

%table.kame
  %tr.total
    %th=tc(:payments_count, :mode=>@deposit.mode.name)
    %td=@deposit.payments_count 
  %tr.total.important
    %th=tc(:total)
    %td=@deposit.amount.to_s+" "+@deposit.cash.currency.code


