=purchase_steps

-if @purchase_order.amount_with_taxes > 0
  %h2=tc :payments
  =toolbar do |t|
    -t.link :purchase_payment_part_create, :expense_id=>@purchase_order.id if @purchase_order.unpaid_amount > 0
  =dyta :purchase_order_payment_parts

%h2=tc(:products)
=dyta :purchase_order_lines

%h2=tc :financial_state
%table.dyta
  -for k, v in @purchase_order.stats(:with_balance=>true)
    %tr.total
      %th=tc(k)
      %td=number_to_accountancy(v)
