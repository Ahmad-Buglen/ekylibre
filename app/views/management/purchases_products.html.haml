=evalue @purchase_order, :supplier
=evalue @purchase_order, :planned_on
=evalue @purchase_order, :comment

%h2=tc :lines 
=toolbar do
  -link :purchases_print, :id=>@purchase_order.id if @purchase_order.lines.size>0
  -link :purchase_order_line_create if @purchase_order.shipped == false
=dyta :purchase_order_lines

.total
  %table.dyta
    %tr
      %th=tc :amount
      %td=@purchase_order.amount
    %tr.important
      %th=tc :amount_with_taxes
      %td=@purchase_order.amount_with_taxes

- form_tag do
  .actions
    =link_to tg(:previous), :action=>:purchase_orders
    - if @purchase_order.shipped == false
      =submit_tag(tc('validate'), :action=>:purchases_products) if @purchase_order.lines.size>0
