= aclist do |l|
  - l.action :purchases

%h2=tc :lines 
-if @purchase_order.shipped == false
  .aclist
    =link_to tc('purchase_order_line_create'), :action=>:purchase_order_lines_create, :class=>'procedure create'
=dyta :purchase_order_lines


.total
  %table.dyta
    %tr
      %th=tc :amount
      %td=@purchase_order.amount
    %tr.important
      %th=tc :amount_with_taxes
      %td=@purchase_order.amount_with_taxes

- form_tag do
  .actions
    =link_to tg(:previous), :action=>:purchases
    - if @purchase_order.shipped == false
      =submit_tag(tc('validate'), :action=>:purchases_products) if @purchase_order.lines.size>0
