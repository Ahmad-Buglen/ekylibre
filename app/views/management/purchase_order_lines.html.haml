=purchase_steps

=toolbar do |t|
  -if @purchase_order.lines.size > 0 
    -t.print :purchase_order, :p0=>@purchase_order.id 
%h2=tc :general
= toolbar do |t|
  - if @purchase_order.updatable?
    - t.link(:purchase_order_update, {:id=>@purchase_order.id})
%table.flex
  %tr
    %td
      =evalue @purchase_order, :supplier, :label=>:full_name, :url=>{:controller=>:relations, :action=>:entity}
      =evalue @purchase_order, :planned_on
      =evalue @purchase_order, :comment
    %td
      =evalue @purchase_order, :dest_contact, :label=>:address

%h2=tc :lines 
=toolbar do
  -link :purchase_order_line_create, :order_id=>@purchase_order.id if @purchase_order.updatable?
=dyta :purchase_order_lines


%table.dyta
  %tr.total
    %th=tc :amount
    %td=@purchase_order.amount
  %tr.important.total
    %th=tc :amount_with_taxes
    %td=@purchase_order.amount_with_taxes

.end

- form_tag do
  .actions
    =link_to tg(:previous), :action=>:purchase_orders
    - unless @purchase_order.shipped
      =submit_tag(tc('validate'), :action=>:purchase_order_lines, :confirm=>tg(:are_you_sure)) if @purchase_order.lines.size>0
