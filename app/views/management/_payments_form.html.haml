.payments
  %ul
    %li
      -form_tag do
        -for mode in @modes
          =radio_button(:price, :mode , mode, :checked=>( mode=="new" ? true : false))+"&nbsp;"+content_tag(:label, tc(mode))
=formalize do |f|
  -f.error :payment
  -f.title :title
  -f.field :payment, :amount
  -f.field :payment, :paid_on
  -f.field :payment, :mode_id, :choices=>PaymentMode.find(:all,:conditions=>{:company_id=>@current_company.id}).collect{|x| [x.name, x.id ]}, :new=>{:action=>:payment_modes_create}
  -f.field :payment, :account_id, :choices=>@current_company.accounts.find(:all, :conditions=>{:deleted=>false}, :order=>:number).collect{|x| [x.label, x.id]},:options=>{:include_blank=>true}
