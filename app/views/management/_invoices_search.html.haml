.search
  =form_tag(:action=>:invoices) do
    %table
      %tr
        %td.label=tc(:search)
        %td.field=text_field_tag :key, session[:invoice_key]
        -for state in [:all, :credits, :cancelled]
          %td
            =radio_button(:invoice, :state, state, :checked=>(state.to_s == session[:invoice_state] ? true : false))
            %label{:for=>'invoice_'+state.to_s}=tc("invoices_states.#{state}")
        %td.submit=submit_tag tg(:search_go)
