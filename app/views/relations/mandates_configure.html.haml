- form_tag(:action=>:mandates_config) do 
  %table.dyta
    %tr
      %th=tc(:column)
      %th{:colspan=>2}=tc :filter
      %th{:colspan=>2}=tc :mandate_new_value
    -for column in [:family, :organization, :title]
      %tr{:class=>cycle('odd', 'even')}
        %td=tc 'column_'+column.to_s
        %td=select_tag "filter_#{column}".to_sym, options_for_select(@filters_select)
        %td=text_field_tag column
        %td=check_box_tag "#{column}_check".to_sym
        %td=text_field_tag "new_#{column}".to_sym
  .actions
    =submit_tag tc(:validate) 
