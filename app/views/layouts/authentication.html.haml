-# coding: UTF-8
!!! 5
%html{:xmlns => "http://www.w3.org/1999/xhtml", :dir => t("i18n.dir"), :lang => t("i18n.iso2"), "xml:lang" => t("i18n.iso2"), :class => :authentication}
  %head
    %link{:rel => "icon", :type => "image/png", :href => image_path("favicon.png")}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0, maximum-scale=1.0"}
    =title_tag
    =csrf_meta_tags
    =stylesheet_link_tag :application
    =theme_link_tag(@current_theme)
    =javascript_include_tag :application
  %body
    =yield :popover
    #wrap
      #main
        %header#header
          %h1#title=controller.human_action_name
        #content
          =notifications_tag
          =yield
    %footer#legals=legals_sentence
