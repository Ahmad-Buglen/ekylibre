%html{:xmlns => "http://www.w3.org/1999/xhtml", :dir => t("i18n.dir"), :lang => t("i18n.iso2"), "xml:lang" => t("i18n.iso2"), :class => :authentication, style: (Ekylibre::CorporateIdentity::Visual.file? ? "background-image: url(#{Ekylibre::CorporateIdentity::Visual.url}); background-size: 100%; background-position: center" : nil)}
  %head
    = title_tag
    = csrf_meta_tags
    = viewport_tag
    = icon_tags
    = theme_link_tag
    = javascript_include_tag :application, "data-turbolinks-track" => true
  %body{}
    = yield :popover
    #wrap
      #main
        #content
          .logo= image_tag("logo.svg")
          = notice
          = alert
          = notifications_tag
          = yield
    %footer#legals= legals_sentence
