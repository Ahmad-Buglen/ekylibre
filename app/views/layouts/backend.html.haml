-# coding: UTF-8
!!! 5
%html{:xmlns => "http://www.w3.org/1999/xhtml", :dir => t("i18n.dir"), :lang => t("i18n.iso2"), "xml:lang" => t("i18n.iso2"), :class => :backend}
  %head
    %link{:rel => "icon", :type => "image/png", :href => image_path("favicon.png")}
    =meta_viewport_tag
    =title_tag
    =csrf_meta_tags
    =stylesheet_link_tag :application
    =theme_link_tag(@current_theme)
    =javascript_include_tag :application
  -expiration = {}
  -expiration = {"timeout" => session[:expiration], "timeout-href" => renew_session_url(:user_name => current_user.user_name)} if current_user and session[:expiration].to_i>0
  %body{:data => expiration, :class => "mod-"+reverse_menus[0].to_s}
    -if request.url != backend_root_url
      =navigation_tag
    #wrap
      %aside#side.visible=side_tag
      #main
        #main-wrapper
          %header#header
            -#=main_toolbar_tag
            =heading_tag
            =subheading_tag
          #content
            =notifications_tag
            =yield
    %footer#legals=legals_sentence
    =yield :popover
