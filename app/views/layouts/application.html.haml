!!! XML utf-8
!!! strict-svg
%html{:xmlns=>'http://www.w3.org/1999/xhtml'}
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html;charset=UTF-8'}
    %link{:rel=>"icon", :type=>"image/png", :href=>image_path("favicon.png")}
    =title_tag
    =theme_link_tag(@current_theme)
    =calendar_link_tag
    =javascript_include_tag :defaults, 'dyke'
  %body{:onload=>"resize();", :onresize=>"resize();"}
    #body{:orient=>:vertical, :flex=>1}
      =top_tag
      #columns.columns{:orient=>:horizontal, :flex=>1}
        -side=side_tag
        -unless side.blank?
          #side{:orient=>:vertical, :style=>"overflow: visible"+(session[:side] ? "" : "; display:none")}=side      
        #main.main{:flex=>9, :orient=>:vertical, :class=>("with-side" unless side.blank?), :style=>"position: absolute; top: 0px; overflow: visible;"}
          .nav
            =help_link_tag
            =side_link_tag
            %h1.title=action_title
          .yield{:flex=>1, :orient=>:vertical}
            =notifications_tag
            =yield
        =help_tag(:flex=>3)
   
