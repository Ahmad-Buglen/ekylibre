!!! XML utf-8
!!! strict-svg
%html{:xmlns=>'http://www.w3.org/1999/xhtml'}
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html;charset=UTF-8'}
    %link{:rel=>"icon", :type=>"image/png", :href=>"/images/favicon.png"}
    %title='Ekylibre - '+t("controllers.#{controller.controller_name.to_s}.title")
    = stylesheet_link_tag 'application', 'dyta'
    = stylesheet_link_tag 'print', :media=>'print'
    = javascript_include_tag :defaults
  %body{:id=>:body, :orient=>:vertical, :onload=>'initTab(); resize();', :onresize=>'resize();'}
    = top_tag
    #columns{:orient=>:horizontal, :flex=>1}
      =left_tag
      #main{:flex=>9, :orient=>:vertical}
        #content{:flex=>3, :orient=>:vertical}
          .nav{:flexy=>'true'}
            =help_tag
            %h1.title=title
          #yield{:flex=>50, :orient=>:vertical}
            = flash_tag :error
            = flash_tag :warning
            = flash_tag :notice
            - unless flash[:message].blank?
              .message=flash[:message]
            =yield
            .end{:style=>'height:1px'}
        #legals{:flexy=>'true'}=#link_to 'www.ekylibre.org', 'http://www.ekylibre.org'
      #help{:flex=>3, :style=>''+(session[:help] ? "" : "display:none")}
        = render :partial=>'help/search' if session[:help]
 
