!!! XML utf-8
!!! Strict
%html{:xmlns=>'http://www.w3.org/1999/xhtml'}
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html;charset=UTF-8'}
    %link{:rel=>"icon", :type=>"image/png", :href=>"/images/favicon.png"}
    = title_tag
    = stylesheet_link_tag 'application'
    = javascript_include_tag :defaults
  %body{:id=>:body, :orient=>:vertical, :onload=>'resize();', :onresize=>'resize();'}
    = top_tag
    #columns{:orient=>:horizontal, :flex=>1}
      =left_tag
      #main{:flex=>9, :orient=>:vertical}
        = flash_tag :error
        = flash_tag :warning
        = flash_tag :notice
        #content{:flex=>3, :orient=>:vertical}
          = help_tag
          #yield=yield
      #help{:flex=>3, :style=>''+(session[:help] ? "" : "display:none")}
        = render :partial=>'help/search' if session[:help]
 
