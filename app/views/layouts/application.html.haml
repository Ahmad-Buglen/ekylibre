    =theme_link_tag(@current_theme)
    =calendar_link_tag
    =javascript_include_tag :defaults
    =#javascript_include_tag 'layout'
    =javascript_include_tag "dyke"
  %body
    #body.flex
      #top=top_tag
      #wrap.wrap.hbox.flex
        #side.side.anchor-left{:style=>("display:none;" unless session[:side])}=side_tag
        #help.help.flex-3.anchor-right{:style=>("display:none;" unless session[:help])}=help_tag
        #main.main.flex-9{:class=>("with-side" if session[:side])}
          .nav
            =help_link_tag
            =side_link_tag
            =title_header_tag
          .yield.flex
            =notifications_tag
            =yield

