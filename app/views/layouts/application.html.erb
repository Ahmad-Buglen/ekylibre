<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<%=title_tag%>
<%=stylesheet_link_tag(:defaults)%>
<%=javascript_include_tag(:defaults)%>
</head>
<%=
window(:orient=>:vertical) do |w|
  w.hbox do |h|
    h.vbox({:align=>:start}, location_tag(:guide))
    h.vbox({:align=>:end}, location_tag(:user))
  end
  w.hbox do |h|
    h.vbox({:flex=>1}, location_tag(:user))
    h.splitter :collapse=>:before
    h.vbox({:flex=>1}) do |v|
      v.add flash_tag(:error)
      v.add flash_tag(:warning)
      v.add flash_tag(:notice)
      v.add yield
    end
    h.splitter :collapse=>:after
    h.vbox({:flex=>1}, location_tag(:user))
  end
end
-%>
</html>
