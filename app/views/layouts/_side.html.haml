- part = Ekylibre::Parts.part_of(controller.controller_path, action_name)
- current = Ekylibre::Parts.reverse(controller.controller_path, action_name) || []
- for group, items in Ekylibre::Parts.groups_in(part)
  - side_menu(group, :title => Ekylibre::Parts.human_name(part, group), :icon => Ekylibre::Parts.icon(part, group), :active => !!(group == current[1])) do |m|
    - for item, pages in items
      - if current_user and current_user.can_access?(pages.first)
        - attrs = {:title => Ekylibre::Parts.human_name(part, group, item)}
        - attrs[:active] = true if item == current[2]
        - m.link(item, pages.first, attrs)

- snippet :user, :title => Entity.of_company.full_name do
  %ul
    %li= link_to(current_user.person.full_name, backend_myself_path, :class => :user)
    %li= link_to(Authentication::SessionsController.human_action_name(:destroy), destroy_user_session_path, :method => :delete)

- add_snippets(:side)
