=toolbar do |t|
  -t.edit @product_group
  -t.print_entity @product_group
  -t.destroy(@product_group, :method=>:delete, "data-confirm" => tg(:are_you_sure_you_want_to_delete)) if @product_group.destroyable?

=beehive do |b|
  -b.cell :details do
    =attributes_list(@product_group) do |l| # liste des champs Ã  afficher
      -l.attribute :name
      -l.attribute :comment

  -b.tabbox do

    -b.cell(:animals) do
      =toolbar do |t|
        -t.link(:new, :controller=>:animals, :group_id=>@product_group.id)
      =list(:animals)

    -#b.cell(:events) do
      =toolbar do |t|
        -t.link(:new, :controller=>:animal_group_events, :animal_group_id=>@product_group.id)
      =list(:events)
      =image_tag(@chart)


