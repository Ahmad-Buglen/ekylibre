-# Eclated automatically (2011-06-08)
=toolbar do |t|
  -for mode in @current_company.incoming_payment_modes.find(:all, :order=>:name, :conditions=>{:with_deposit=>true})
    -count=mode.depositable_payments.size
    -if count > 0
      -t.link(tc(:deposit_create, :count=>count, :mode=>mode.name), {:action=>:new, :mode_id=>mode.id})
=list



 
