=toolbar do |t|
  - t.link :user_update, :id=>@user.id, :controller=>:company

%table
  %tr
    %td
      =evalue @user, :last_name
      =evalue @user, :first_name
      =evalue @user, :employment
      =evalue @user, :commercial
    %td
      =evalue @user, :profession, :label=>:name
      =evalue @user, :establishment, :label=>:name
      =evalue @user, :department, :label=>:name

=tabbox(:entities) do |tb|
  -tb.tab(tc(:events, :count=>@user.events.count)) do |c|
    -c << toolbar do
      -link(:event_create, :controller=>:relations)
    -c << dyta(:employee_events)
  -tb.tab(tc(:sale_orders, :count=>@user.sale_orders.count)) do |c|
    -c << toolbar do 
      -link(:sale_order_create, :controller=>:management)
    -c << dyta(:employee_sale_orders)
  -if @user.shape_operations.size > 0
    -tb.tab(tc(:shape_operations, :count=>@user.shape_operations.count)) do |c|
      -c << dyta(:employee_shape_operations) 
        
