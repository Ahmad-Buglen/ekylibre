=render :partial=>"search_form"
%table.full-width
  %tr
    -if @results
      %td.results{:valign=>:top}
        %h2=tc(:results, :count=>@results.size)
        -if @results.size>0
          %ul
            -for r in @results[0..@per_page-1]
              %li=render :partial=>'result', :locals=>{:result=>r}
          -if @results.size>@per_page
            =link_to_function(tc(:other_results), "var list=$('other_results'); if (list.style.display=='none') {list.show();} else {list.hide();}", :class=>"icon im-more")
            %ul#other_results{:style=>'display:none'}
              -for r in @results[@per_page..-1]
                %li=render :partial=>'result', :locals=>{:result=>r}
    %td#helpage{:valign=>:top}
