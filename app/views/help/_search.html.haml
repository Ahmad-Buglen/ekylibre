%div{:orient=>:vertical, :flex=>1}
  .nav
    #help-close.help-link=link_to_remote(content_tag(:div, "&nbsp;"), :url=>{:controller=>:help, :action=>:close}, :loading=>"closeHelp(); onLoading();", :loaded=>"onLoaded();")
    #help-previous.help-link=link_to_remote(content_tag(:div, "&nbsp;"), :url=>{:controller=>:help, :action=>:previous }, :update=>:help, :complete=>"resize2();", :loading=>"onLoading();", :loaded=>"onLoaded();" ) if session[:help_history].size>1
    %h1.title=tc :title
  .content{:flex=>1, :style=>'overflow:auto;'}
    - doc=retrieve(@id)
    - if doc.blank?
      .help-error
        =tc(:error_no_file, :value=>@id)
      %ul
        %li=link_to_remote(tc("home"), :url=>{:controller=>:help, :action=>:search, :id=>"guide-index"}, :update=>:help, :complete=>"resize2();", :loading=>"onLoading();", :loaded=>"onLoaded();" )
    - else
      =doc
    .text-end &nbsp;
