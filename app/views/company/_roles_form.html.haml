- if !@rights.nil?
  - for right in @rights
    =formalize do |f|
      - f.title tc((right[0].to_s+"_rights").to_sym)
      - for right_name in right[1]
        - f.field t(('rights.'+right_name.to_s).to_sym), check_box_tag("right[#{right_name}]", "#{right_name}", @role.rights.include?(right_name.to_s)||@role.rights=="administrate", :id=>"right_#{right_name}")




=observe_field "user_role_id", :frequency => 0.25, :function=>"check_uncheck"
