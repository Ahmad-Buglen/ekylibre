-listing_node = listing_node_position
-form_remote_tag(:url=>{:action=>:listing_node_update, :id=>listing_node.id, :type=>"position"}, :update=>"#{listing_node.key}_position") do
  %span{:onclick=>"this.hide(); $('#{listing_node.key}_position_tf').show();  $('#{listing_node.key}_validate_position').show(); "}=listing_node.position
  =text_field_tag("position", listing_node.position, :size=>10, :id=>listing_node.key+"_position_tf", :style=>'display: none;')
  %span{:style=>'display: none;', :id=>listing_node.key+"_validate_position"}=submit_tag(tg(:validate))
