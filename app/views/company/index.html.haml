=render :partial=>"shared/entities_search"

.menu.indicator
  %h2= tg('indicator')
  %ul
    =li_link_to tc('nb_entities',:count=>@entities.size), :controller=>:relations, :action=>:entities
    =li_link_to tc('nb_sales', :count=>@deliveries.size), :controller=>:management, :action=>:undelivered_sales
    =li_link_to tc('nb_purchases', :count=>@purchases.size), :controller=>:management, :action=>:unreceived_purchases

.menu
  %h2=tc(:modules)
  %ul
    -for controller in [:relations, :accountancy, :management, :resources, :production]
      =li_link_to tc(controller), :controller=>controller, :action=>:index

=h Unit.normalize("kg.m3 15,45.s-1 s").inspect
