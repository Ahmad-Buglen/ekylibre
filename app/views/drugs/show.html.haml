=toolbar do |t|
  -t.edit @drug
  -t.destroy(@drug, :method=>:delete, "data-confirm" => tg(:are_you_sure_you_want_to_delete)) if @drug.destroyable?

=attributes_list(@drug) do |l| # liste des champs Ã  afficher
  -l.attribute :name
  -l.attribute :nature, :url => true
  -l.attribute :frequency
  -l.attribute :quantity
  -l.attribute :comment
-#  -l.image_tag :picture.url(:thumb)

=tabbox(:drug) do |tb|
  -tb.tab(:animal_cares) do
    =toolbar do |t|
      -t.link(:new, :controller=>:animal_cares, :drug_id=>@drug.id)
    =list(:animal_cares)

