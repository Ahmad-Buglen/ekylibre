=field_set(@animal, :genealogy) do |f| # partie entrée sortie de l entité animal
  =f.association :father, :collection => Animal.where(:sex => "male").order("name ASC")
  =f.association :mother, :collection => Animal.where(:sex => "female").order("name ASC")

