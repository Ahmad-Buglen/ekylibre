=toolbar do |t|
  -t.update @incoming_payment


=attributes_list(@incoming_payment) do |l|
  -l.attribute :number
  -l.attribute :amount
  -l.attribute :used_amount
  -l.attribute :payer, :label=>:full_name, :url=>{:controller=>:relations, :action=>:entity}
  -l.attribute :responsible, :label=>:label
  -l.attribute :deposit, :url=>{:action=>:deposit}
  -l.attribute :mode
  -l.attribute :commission_amount
  -l.attribute :commission_account, :url=>{:controller=>:accountancy, :action=>:account}
  -l.attribute :paid_on
  -l.attribute :to_bank_on 
  -l.attribute :received
  -l.attribute :scheduled
  -l.attribute :bank
  -l.attribute :account_number
  -l.attribute :check_number
  -l.attribute :journal_entry, :url=>{:controller=>:accountancy, :action=>:journal_entry}

-if @incoming_payment.uses.size>0
  -if Sale.find(:all, :conditions=>["sales.company_id=? AND id IN (SELECT expense_id FROM incoming_payment_uses WHERE payment_id=? AND expense_type=?)", @current_company.id, session[:current_payment_id], Sale.name]).size > 0
    %h2=tc(:sales)
    =kame :incoming_payment_sales
