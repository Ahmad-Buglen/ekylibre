-nature ||= (@cash ? @cash.nature : "unknown")
=formalize do |f|  
  -f.title :accountancy
  -if nature == "bank_account"
    -f.field :cash, :account_id, :choices=>{:reflection=>:banks_accounts}, :new=>{:controller=>:accountancy, :action=>:account_create, :number=>@current_company.preferred_financial_banks_accounts}
    -f.field :cash, :journal_id, :choices=>{:reflection=>:bank_journals}, :new=>{:controller=>:accountancy, :action=>:journal_create, :nature=>:bank}
  -elsif nature == "cash_box"
    -f.field :cash, :account_id, :choices=>{:reflection=>:cashes_accounts}, :new=>{:controller=>:accountancy, :action=>:account_create, :number=>@current_company.preferred_financial_cashes_accounts}
    -f.field :cash, :journal_id, :choices=>{:reflection=>:cash_journals}, :new=>{:controller=>:accountancy, :action=>:journal_create, :nature=>:cash}
