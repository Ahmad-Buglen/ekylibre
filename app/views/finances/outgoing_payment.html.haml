=toolbar do |t|
  -t.update @outgoing_payment

=attributes_list(@outgoing_payment) do |l|
  -l.attribute :number
  -l.attribute :amount
  -l.attribute :used_amount
  -l.attribute :payee, :label=>:full_name, :url=>{:controller=>:relations, :action=>:entity}
  -l.attribute :responsible, :label=>:label
  -l.attribute :mode
  -l.attribute :paid_on
  -l.attribute :to_bank_on
  -l.attribute :check_number
  -l.attribute :journal_entry, :url=>{:controller=>:accountancy, :action=>:journal_entry}

-if false # @outgoing_payment.unused_amount > 0
  =form_tag(:action=>:outgoing_payment_use_create) do
    %fieldset
      %legend=tc(:add_purchase)
      =render :partial=>'outgoing_payment_use_create'
      .actions=submit_tag

-if @outgoing_payment.uses.size>0
  %h2=tc(:purchases)
  =kame :outgoing_payment_purchases
